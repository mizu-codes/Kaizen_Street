         /* PC/Desktop specific background sizing */
        @media (min-width: 1024px) {
            .anime-bg-image {
                background-size: contain;
                background-repeat: no-repeat;
                background-position: center;
            }
            
            /* Alternative: Use background-size: 100% 100% to fill exactly */
            .anime-bg-image.fill-exact {
                background-size: 100% 100%;
            }
            
            /* Alternative: Use background-size: cover but with better positioning */
            .anime-bg-image.cover-better {
                background-size: cover;
                background-position: center top;
            }
