    <style>
        .align-items-center {
            padding: 8px;
        }

        .profile-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px;
        }

        .profile-layout {
            display: grid;
            grid-template-columns: 280px 1fr;
            gap: 2rem;
            margin: 2rem 0;
            align-items: start;
        }

        .mobile-sidebar-toggle {
            display: none;
            background: #3BB77E;
            color: white;
            border: none;
            padding: 0.875rem 1.25rem;
            border-radius: 8px;
            margin-bottom: 1rem;
            font-weight: 500;
            cursor: pointer;
            width: 100%;
            align-items: center;
            justify-content: space-between;
            transition: background 0.3s ease;
        }

        .mobile-sidebar-toggle:hover {
            background: #2d8f5c;
        }

        .mobile-sidebar-toggle i {
            margin-right: 0.5rem;
        }

        .mobile-sidebar-toggle .toggle-icon {
            transition: transform 0.3s ease;
        }

        .mobile-sidebar-toggle.active .toggle-icon {
            transform: rotate(180deg);
        }

        .profile-sidebar {
            background: #fff;
            border: 1px solid #e0e4e8;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            position: sticky;
            top: 20px;
            height: fit-content;
        }

        .profile-sidebar h4 {
            margin: 0;
            padding: 1.25rem;
            background: linear-gradient(135deg, #e8f4f2 0%, #ddf0e8 100%);
            color: #3BB77E;
            font-weight: 600;
            border-bottom: 1px solid #e0e4e8;
            font-size: 1.1rem;
        }

        .profile-sidebar ul {
            list-style: none;
            margin: 0;
            padding: 0.5rem 0;
        }

        .profile-sidebar li {
            margin: 0 0.5rem 0.25rem 0.5rem;
        }

        .profile-sidebar li:last-child {
            margin-bottom: 0.5rem;
        }

        .profile-sidebar a {
            display: flex;
            align-items: center;
            padding: 0.875rem 1rem;
            color: #4a5568;
            text-decoration: none;
            font-weight: 500;
            border-radius: 8px;
            transition: all 0.3s ease;
            position: relative;
        }

        .profile-sidebar a:hover {
            background: #e6fffa;
            color: #3BB77E;
            transform: translateX(2px);
        }

        .profile-sidebar a.active {
            background: #e6fffa;
            color: #3BB77E;
            font-weight: 600;
        }

        .profile-sidebar a.active::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 3px;
            background: #3BB77E;
            border-radius: 0 2px 2px 0;
        }

        .profile-sidebar i {
            margin-right: 0.75rem;
            font-size: 1.1rem;
            width: 20px;
            text-align: center;
        }

        /* Profile Content */
        .profile-content {
            background: #fff;
            border: 1px solid #e0e4e8;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            overflow: hidden;
        }

        .profile-header {
            background: linear-gradient(135deg, #e8f4f2 0%, #ddf0e8 100%);
            padding: 0.1rem;
            border-bottom: 1px solid #e0e4e8;
        }

        .profile-body {
            padding: 1rem;
        }

        .profile-section:last-child {
            margin-bottom: 0;
        }

        .profile-section h3 {
            color: #3BB77E;
            font-weight: 600;
            margin-bottom: 1.5rem;
            padding-bottom: 0.75rem;
            border-bottom: 2px solid #e0e4e8;
            gap: 10px;
            font-size: 1.25rem;
        }

        .profile-section h3 i {
            margin-right: 0.2rem;
            font-size: 1.2rem;
        }

        .profile-avatar-container {
            position: relative;
            display: inline-block;
        }

        .profile-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #e0e4e8;
            transition: all 0.3s ease;
        }

        .profile-avatar:hover {
            border-color: #3BB77E;
            transform: scale(1.02);
        }

        .avatar-upload-btn {
            position: absolute;
            bottom: 0;
            right: 0;
            background: #3BB77E;
            color: white;
            border: none;
            border-radius: 50%;
            width: 36px;
            height: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
        }

        .avatar-upload-btn:hover {
            background: #2d8f5c;
            transform: scale(1.1);
        }

        .avatar-upload-input {
            position: absolute;
            opacity: 0;
            width: 100%;
            height: 100%;
            cursor: pointer;
        }

        /* Form Styles */
        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            color: #4a5568;
            font-weight: 600;
            font-size: 0.95rem;
        }

        .form-input {
            width: 100%;
            padding: 0.875rem 1rem;
            border: 2px solid #e0e4e8;
            border-radius: 8px;
            font-size: 1rem;
            color: #2d3748;
            background: #fff;
            transition: all 0.3s ease;
        }

        .form-input:focus {
            outline: none;
            border-color: #3BB77E;
            box-shadow: 0 0 0 3px rgba(59, 183, 126, 0.1);
        }

        .form-input:hover {
            border-color: #3BB77E;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1.5rem;
        }

        /* Phone input specific styling */
        .phone-input {
            max-width: 300px;
        }

        /* Welcome Section */
        .welcome-section {
            text-align: center;
            margin-bottom: 2rem;
        }

        .welcome-section h1 {
            color: #2d3748;
            font-size: 2rem;
            margin-top: 2rem;
            margin-bottom: 0.5rem;
        }

        .welcome-section .subtitle {
            color: #4a5568;
            font-size: 1.1rem;
            margin-bottom: 2rem;
        }

        .action-buttons {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
            justify-content: center;
            flex-wrap: wrap;
        }

        .editProfile-Button {
            font-size: 0.7rem;
            font-weight: 600;
            padding: 8px 16px;
            color: white;
            background: #088178;
            border-radius: 14px;
            text-transform: uppercase;
            letter-spacing: 1px;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.05);
            display: flex;
            align-items: center;
            gap: 4px;
            border: none;
        }

        .editProfile-Button:hover {
            background: #06675f;
            color: #ffffff;
        }

        .btn i {
            font-size: 1rem;
        }

        /* Avatar Upload Preview */
        .avatar-preview {
            margin-top: 1rem;
            text-align: center;
        }

        .avatar-preview img {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #e0e4e8;
        }

        .avatar-preview-text {
            margin-top: 0.5rem;
            color: #4a5568;
            font-size: 0.875rem;
        }

        .otp-modal {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
        }

        .otp-close {
            position: absolute;
            top: 8px;
            right: 12px;
            background: transparent;
            border: none;
            font-size: 1.5rem;
            cursor: pointer;
            line-height: 1;
        }

        .otp-close:focus {
            outline: none;
        }

        .swal2-container {
            z-index: 10000 !important;
        }

        .otp-card {
            background: white;
            padding: 2rem;
            border-radius: 10px;
            text-align: center;
            width: 300px;
        }

        .swal-responsive {
            width: 90% !important;
            max-width: 320px !important;
            padding: 1.2rem !important;
            border-radius: 10px;
            font-size: 0.95rem;
        }

        .swal2-title {
            font-size: 1.1rem !important;
        }

        .swal2-html-container {
            font-size: 0.9rem !important;
        }


        .fa-spinner.fa-spin {
            animation: spin 1s linear infinite;
        }

        /* Main Newsletter Section */
        .newsletter {
            background: url('https://plus.unsplash.com/premium_photo-1666700698946-fbf7baa0134a?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MXx8YW5pbWV8ZW58MHx8MHx8fDA%3D');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            padding: 80px 30px;
            text-align: center;
            color: white;
            position: relative;
            overflow: hidden;
            margin: 40px 0;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
            min-height: 250px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .newsletter::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image:
                radial-gradient(circle at 25% 25%, rgba(255, 255, 255, 0.1) 2px, transparent 2px),
                radial-gradient(circle at 75% 75%, rgba(255, 182, 193, 0.1) 1px, transparent 1px),
                linear-gradient(45deg, transparent 40%, rgba(255, 255, 255, 0.05) 50%, transparent 60%);
            background-size: 50px 50px, 30px 30px, 100px 100px;
            animation: float 20s ease-in-out infinite;
            pointer-events: none;
        }

        @keyframes float {

            0%,
            100% {
                transform: translateY(0px) rotate(0deg);
            }

            25% {
                transform: translateY(-10px) rotate(1deg);
            }

            50% {
                transform: translateY(-5px) rotate(-1deg);
            }

            75% {
                transform: translateY(-15px) rotate(0.5deg);
            }
        }

        /* Floating anime elements */
        .floating-elements {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            pointer-events: none;
            overflow: hidden;
        }

        .floating-element {
            position: absolute;
            font-size: 2rem;
            opacity: 0.3;
            animation: floatAround 15s linear infinite;
        }

        .floating-element:nth-child(1) {
            top: 20%;
            left: 10%;
            animation-delay: 0s;
        }

        .floating-element:nth-child(2) {
            top: 60%;
            right: 15%;
            animation-delay: 5s;
        }

        .floating-element:nth-child(3) {
            bottom: 30%;
            left: 20%;
            animation-delay: 10s;
        }

        @keyframes floatAround {
            0% {
                transform: translateY(0px) rotate(0deg);
                opacity: 0.3;
            }

            25% {
                transform: translateY(-20px) rotate(90deg);
                opacity: 0.6;
            }

            50% {
                transform: translateY(-10px) rotate(180deg);
                opacity: 0.4;
            }

            75% {
                transform: translateY(-30px) rotate(270deg);
                opacity: 0.5;
            }

            100% {
                transform: translateY(0px) rotate(360deg);
                opacity: 0.3;
            }
        }



        @keyframes spin {
            from {
                transform: rotate(0deg);
            }

            to {
                transform: rotate(360deg);
            }
        }

        .btn:disabled {
            opacity: 0.7;
            cursor: not-allowed;
        }

        /* Responsive Design */
        @media (max-width: 991px) {
            .profile-layout {
                grid-template-columns: 1fr;
                gap: 1rem;
            }

            .mobile-sidebar-toggle {
                display: flex;
            }

            .profile-sidebar {
                position: static;
                max-height: 0;
                overflow: hidden;
                opacity: 0;
                transform: translateY(-10px);
                transition: all 0.3s ease;
                border: none;
                background: transparent;
                box-shadow: none;
            }

            .profile-sidebar.show {
                max-height: 600px;
                opacity: 1;
                transform: translateY(0);
                border: 1px solid #e0e4e8;
                background: #fff;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            }

            .profile-sidebar h4 {
                display: none;
            }

            .profile-sidebar ul {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
                gap: 0.5rem;
                padding: 1rem;
            }

            .profile-sidebar li {
                margin: 0;
                border: 1px solid #e0e4e8;
                border-radius: 8px;
            }

            .profile-sidebar a {
                padding: 1rem;
                text-align: center;
                flex-direction: column;
                gap: 0.5rem;
            }

            .profile-sidebar a i {
                margin-right: 0;
                font-size: 1.5rem;
            }

            .profile-sidebar a.active::before {
                display: none;
            }

            .form-row {
                grid-template-columns: 1fr;
                gap: 1rem;
            }

            .phone-input {
                max-width: 100%;
            }
        }

        @media (max-width: 768px) {
            .profile-container {
                padding: 0 10px;
            }

            .profile-layout {
                margin: 1rem 0;
            }

            .profile-header,
            .profile-body {
                padding: 1.5rem;
            }

            .profile-avatar {
                width: 100px;
                height: 100px;
            }

            .avatar-upload-btn {
                width: 32px;
                height: 32px;
            }

            .action-buttons {
                flex-direction: column;
                align-items: center;
            }

            .btn {
                width: 100%;
                max-width: 120px;
            }

            .profile-sidebar ul {
                grid-template-columns: 1fr;
            }

            .welcome-section h1 {
                font-size: 1.5rem;
            }
        }

        @media (max-width: 480px) {

            .profile-header,
            .profile-body {
                padding: 1rem;
            }

            .profile-section h3 {
                font-size: 1.1rem;
            }

            .profile-avatar {
                width: 80px;
                height: 80px;
            }

            .avatar-upload-btn {
                width: 28px;
                height: 28px;
            }

            .profile-sidebar a {
                padding: 0.75rem;
            }

            .profile-sidebar i {
                font-size: 1.25rem;
            }

            .welcome-section h1 {
                font-size: 1.3rem;
            }

            .welcome-section .subtitle {
                font-size: 1rem;
            }
        }
    </style>
</head>

