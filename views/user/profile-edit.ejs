    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('profileSidebar');
            const toggle = document.querySelector('.mobile-sidebar-toggle');

            sidebar.classList.toggle('show');
            toggle.classList.toggle('active');
        }

        document.addEventListener('click', function (event) {
            const sidebar = document.getElementById('profileSidebar');
            const toggle = document.querySelector('.mobile-sidebar-toggle');

            if (window.innerWidth <= 991 &&
                !sidebar.contains(event.target) &&
                !toggle.contains(event.target) &&
                sidebar.classList.contains('show')) {
                sidebar.classList.remove('show');
                toggle.classList.remove('active');
            }
        });

        window.addEventListener('resize', function () {
            const sidebar = document.getElementById('profileSidebar');
            const toggle = document.querySelector('.mobile-sidebar-toggle');

            if (window.innerWidth > 991) {
                sidebar.classList.remove('show');
                toggle.classList.remove('active');
            }
        });

        function previewAvatar(input) {
            const preview = document.getElementById('avatarPreview');
            const file = input.files[0];

            if (file) {
                const reader = new FileReader();
                reader.onload = () => {
                    preview.src = reader.result;
                };
                reader.readAsDataURL(file);
            }
        }


        document.addEventListener('DOMContentLoaded', () => {
            const originalEmail = "<%= user.email %>";
            const form = document.getElementById('profileForm');
            const emailInput = document.getElementById('email');
            const verifyOtpBtn = document.getElementById('verifyOtpBtn');
            const otpModal = document.getElementById('otpModal');
            const otpInput = document.getElementById('otpInput');
            const closeBtn = document.getElementById('closeOtpModal');
            const otpTimerSpan = document.getElementById('otpTimer');

            let otpVerified = false;
            let timerInterval;
            let timeLeft = 60;
            let userClosedModal = false;

            const nameInput = document.querySelector('input[name="name"]');
            if (nameInput) {
                nameInput.addEventListener('input', function (e) {
                    this.value = this.value.replace(/[^A-Za-z\s]/g, '').slice(0, 20);
                });
            }

            function showOtpModal() {
                if (userClosedModal) return;
                otpModal.style.display = 'flex';
                otpInput.disabled = false;
                verifyOtpBtn.disabled = false;
                timeLeft = 60;
                otpTimerSpan.textContent = timeLeft;
                otpTimerSpan.style.color = 'red';
                clearInterval(timerInterval);

                timerInterval = setInterval(() => {
                    timeLeft--;
                    otpTimerSpan.textContent = timeLeft;
                    if (timeLeft <= 0) {
                        clearInterval(timerInterval);
                        otpInput.disabled = true;
                        verifyOtpBtn.disabled = true;
                    }
                }, 1000);
            }

            function hideOtpModal() {
                otpModal.style.display = 'none';
                clearInterval(timerInterval);
            }

            form.addEventListener('submit', async (e) => {
                e.preventDefault();

                const nameValue = document.querySelector('input[name="name"]').value.trim();
                if (!nameValue) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Validation Error',
                        text: 'Name is required',
                        customClass: { popup: 'swal-responsive' }
                    });
                    return;
                }

                if (!/^[A-Za-z\s]{1,20}$/.test(nameValue)) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Validation Error',
                        text: 'Name must be only letters and spaces, max 20 characters',
                        customClass: { popup: 'swal-responsive' }
                    });
                    return;
                }
                const newEmail = emailInput.value.trim();

                if (newEmail !== originalEmail && !otpVerified) {
                    e.preventDefault();

                    const submitButton = form.querySelector('button[type="submit"]');
                    submitButton.disabled = true;
                    submitButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';

                    const formData = new FormData(form);
                    const response = await fetch('/profile/update', {
                        method: 'POST',
                        body: formData
                    });

                    const result = await response.json();

                    if (result.emailChanged) {
                        showOtpModal();
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Update Failed',
                            text: result.message || "Failed to update profile.",
                            customClass: {
                                popup: 'swal-responsive'
                            }
                        });


                        submitButton.disabled = false;
                        submitButton.innerHTML = '<i class="fas fa-check"></i> Save Changes';
                    }

                    return;
                }

                e.preventDefault();

                const submitButton = form.querySelector('button[type="submit"]');
                submitButton.disabled = true;
                submitButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Saving...';

                const formData = new FormData(form);
                const response = await fetch('/profile/update', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success && result.redirectUrl) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Profile Updated',
                        showConfirmButton: false,
                        timer: 1500,
                        customClass: {
                            popup: 'swal-responsive'
                        }
                    }).then(() => {
                        window.location.href = result.redirectUrl;
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Update Failed',
                        text: result.message || 'Something went wrong!',
                        customClass: {
                            popup: 'swal-responsive'
                        }
                    });


                    submitButton.disabled = false;
                    submitButton.innerHTML = '<i class="fas fa-check"></i> Save Changes';
                }
            });


            verifyOtpBtn.addEventListener('click', async () => {
                const otp = otpInput.value.trim();

                const response = await fetch('/profile/verify-otp', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ otp })
                });

                const data = await response.json();
                if (data.success) {
                    otpVerified = true;
                    document.getElementById('otpModal').style.display = 'none';


                    Swal.fire({
                        icon: 'success',
                        title: 'Email Updated!',
                        text: 'Your profile email has been changed successfully.',
                        showConfirmButton: false,
                        timer: 2000,
                        timerProgressBar: true,
                        customClass: {
                            popup: 'swal-responsive'
                        }
                    }).then(() => {
                        if (data.redirectUrl) {
                            window.location.href = data.redirectUrl;
                        } else {
                            form.submit();
                        }
                    });

                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Email Update Failed',
                        text: data.message || 'This email is already in use by another account',
                        width: '90%',
                        customClass: {
                            popup: 'swal-responsive',
                        }
                    });
                }
            })
            closeBtn.addEventListener('click', e => {
                e.stopPropagation();
                userClosedModal = true;
                hideOtpModal();
            });
            otpModal.addEventListener('click', e => {
                if (e.target === otpModal) {
                    hideOtpModal();
                }
            });

        });
    </script>

