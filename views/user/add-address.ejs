                        <a href="/logout">
                            <i class="fi-rs-sign-out"></i> Logout
                        </a>
                    </li>
                </ul>
            </aside>

            <main class="main-content">
                <div class="profile-header">
                    <h3><i class="ri-map-pin-add-line"></i> Add New Address</h3>
                    <a href="/profile/addresses" class="btn-back">
                        <i class="ri-arrow-left-line"></i> Back to Addresses
                    </a>
                </div>

                <div class="profile-body">
                    <div class="form-note">
                        <i class="ri-information-line"></i>
                        <strong>Note:</strong> Please provide accurate address details to ensure smooth delivery of your
                        orders.
                    </div>

                    <% const fromCheckout=(from==='checkout' ); %>

                        <form id="addressForm"
                            action="<%= fromCheckout ? `/checkout/add-address?from=checkout` : `/profile/add-address` %>"
                            method="POST" class="add-address-form">

                            <input type="hidden" name="from" value="<%= from || '' %>">


                            <div class="form-title">
                                <i class="ri-home-4-line"></i>
                                Address Information
                            </div>

                            <div class="form-grid">
                                <div class="form-group">
                                    <label class="form-label required">Full Name</label>
                                    <input type="text" name="userName" class="form-input"
                                        placeholder="Enter your full name"
                                        value="<%= old?.userName || user?.name || '' %>">
                                    <span class="error-message" id="userNameError">
                                        <%= errors?.userName || '' %>
                                    </span>
                                </div>

                                <div class="form-group">
                                    <label class="form-label required">Mobile Number</label>
                                    <input type="tel" name="phoneNumber" class="form-input"
                                        placeholder="Enter your mobile number" value="<%= old?.phoneNumber || '' %>">
                                    <span class="error-message" id="phoneNumberError">
                                        <%= errors?.phoneNumber || '' %>
                                    </span>
                                </div>

                                <div class="form-group">
                                    <label class="form-label required">Pincode</label>
                                    <input type="text" name="pincode" class="form-input"
                                        placeholder="Enter your pincode" maxlength="6"
                                        value="<%= old?.pincode || '' %>">
                                    <span class="error-message" id="pincodeError">
                                        <%= errors?.pincode || '' %>
                                    </span>
                                </div>

                                <div class="form-group">
                                    <label class="form-label required">Locality (Area/Neighborhood)</label>
                                    <input type="text" name="locality" class="form-input"
                                        placeholder="Enter your locality" value="<%= old?.locality || '' %>">
                                    <span class="error-message" id="localityError">
                                        <%= errors?.locality || '' %>
                                    </span>
                                </div>

                                <div class="form-group full-width">
                                    <label class="form-label required">House/Flat No., Building Name</label>
                                    <textarea name="houseNo" class="form-input form-textarea"
                                        placeholder="House No., Building Name, Street Name"><%= old?.houseNo || '' %></textarea>
                                    <span class="error-message" id="houseNoError">
                                        <%= errors?.houseNo || '' %>
                                    </span>
                                </div>

                                <div class="form-group">
                                    <label class="form-label required">City/District/Town</label>
                                    <input type="text" name="city" class="form-input" placeholder="Enter your city"
                                        value="<%= old?.city || '' %>">
                                    <span class="error-message" id="cityError">
                                        <%= errors?.city || '' %>
                                    </span>
                                </div>

                                <div class="form-group">
                                    <label class="form-label required">State</label>
                                    <% const states=[ 'Andhra Pradesh' , 'Arunachal Pradesh' , 'Assam' , 'Bihar'
                                        , 'Chhattisgarh' , 'Goa' , 'Gujarat' , 'Haryana' , 'Himachal Pradesh'
                                        , 'Jharkhand' , 'Karnataka' , 'Kerala' , 'Madhya Pradesh' , 'Maharashtra'
                                        , 'Manipur' , 'Meghalaya' , 'Mizoram' , 'Nagaland' , 'Odisha' , 'Punjab'
                                        , 'Rajasthan' , 'Sikkim' , 'Tamil Nadu' , 'Telangana' , 'Tripura'
                                        , 'Uttar Pradesh' , 'Uttarakhand' , 'West Bengal' , 'Delhi' ]; %>
                                        <select name="state" class="form-input form-select">
                                            <option value="">--- Select State ---</option>
                                            <% states.forEach(st=> { %>
                                                <option value="<%= st %>" <%=old?.state===st ? 'selected' : '' %>><%= st
                                                        %>
                                                </option>
                                                <% }) %>
                                        </select>
                                        <span class="error-message" id="stateError">
                                            <%= errors?.state || '' %>
                                        </span>
                                </div>

                                <div class="form-group">
                                    <label class="form-label">Landmark (Optional)</label>
                                    <input type="text" name="landmark" class="form-input" placeholder="Landmark"
                                        value="<%= old?.landmark || '' %>">
                                    <span class="error-message" id="landmarkError">
                                        <%= errors?.landmark || '' %>
                                    </span>
                                </div>

                                <div class="form-group">
                                    <label class="form-label">Alternate Phone Number (Optional)</label>
                                    <input type="tel" name="altPhoneNumber" class="form-input"
                                        placeholder="Alternate Phone" value="<%= old?.altPhoneNumber || '' %>">
                                    <span class="error-message" id="altPhoneNumberError">
                                        <%= errors?.altPhoneNumber || '' %>
                                    </span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label required">Address Type</label>
                                <div class="radio-group">
                                    <% ['home', 'work' , 'other' ].forEach(type=> { %>
                                        <label class="radio-option <%= old?.addressType === type ? 'selected' : '' %>"
                                            onclick="selectAddressType('<%= type %>')">
                                            <input type="radio" name="addressType" value="<%= type %>"
                                                <%=old?.addressType===type ? 'checked' : '' %>>
                                            <i
                                                class="ri-<%= type === 'home' ? 'home-4-line' : type === 'work' ? 'building-line' : 'map-pin-line' %>"></i>
                                            <span>
                                                <%= type.charAt(0).toUpperCase() + type.slice(1) %>
                                            </span>
                                        </label>
                                        <% }) %>
                                </div>
                                <span class="error-message" id="addressTypeError">
                                    <%= errors?.addressType || '' %>
                                </span>
                            </div>

                            <div class="form-actions">
                                <a href="/profile/addresses" class="add-address-btn">
                                    <i class="ri-close-line"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-primary" id="saveBtn">
                                    <span id="buttonText">
                                        <i class="ri-save-line"></i> Save Address
                                    </span>
                                    <span id="spinner" class="spinner hidden"></span>
                                </button>
                            </div>
                        </form>
                </div>
            </main>


        </div>
    </div>

    <footer class="main">
        <section class="newsletter p-30 text-white wow fadeIn animated">
            <div class="floating-elements">
                <div class="floating-element">桜</div>
