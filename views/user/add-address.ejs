    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('profileSidebar');
            const toggle = document.querySelector('.mobile-sidebar-toggle');

            sidebar.classList.toggle('show');
            toggle.classList.toggle('active');
        }

        document.addEventListener('click', function (event) {
            const sidebar = document.getElementById('profileSidebar');
            const toggle = document.querySelector('.mobile-sidebar-toggle');

            if (window.innerWidth <= 991 &&
                !sidebar.contains(event.target) &&
                !toggle.contains(event.target) &&
                sidebar.classList.contains('show')) {
                sidebar.classList.remove('show');
                toggle.classList.remove('active');
            }
        });

        window.addEventListener('resize', function () {
            const sidebar = document.getElementById('profileSidebar');
            const toggle = document.querySelector('.mobile-sidebar-toggle');

            if (window.innerWidth > 991) {
                sidebar.classList.remove('show');
                toggle.classList.remove('active');
            }
        });

        function selectAddressType(type) {
            document.querySelectorAll('.radio-option').forEach(option => {
                option.classList.remove('selected');
            });

            event.currentTarget.classList.add('selected');

            document.querySelector(`input[value="${type}"]`).checked = true;
        }

        document.querySelector('input[name="pincode"]').addEventListener('input', function (e) {
            this.value = this.value.replace(/\D/g, '').slice(0, 6);
        });

        document.querySelectorAll('input[type="tel"]').forEach(input => {
            input.addEventListener('input', function (e) {
                this.value = this.value.replace(/\D/g, '').slice(0, 10);
            });
        });

        document.querySelectorAll('.form-input').forEach(input => {
            input.addEventListener('focus', function () {
                this.parentElement.style.transform = 'translateY(-2px)';
            });

            input.addEventListener('blur', function () {
                this.parentElement.style.transform = 'translateY(0)';
            });
        });

        document.getElementById('addressForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            let valid = true;
            document.querySelectorAll('.error-message').forEach(el => el.textContent = '');
            const data = Object.fromEntries(new FormData(this).entries());
            function setError(field, msg) {
                const span = document.getElementById(field + 'Error');
                if (span) span.textContent = msg;
                valid = false;
            }
            if (!data.userName.trim()) setError('userName', 'Name is required.');
            if (!/^\d{10}$/.test(data.phoneNumber)) setError('phoneNumber', 'Enter 10 digits.');
            if (!/^\d{6}$/.test(data.pincode)) setError('pincode', 'Enter 6 digits.');
            if (!data.locality.trim()) setError('locality', 'Locality is required.');
            if (!data.houseNo.trim()) setError('houseNo', 'House/flat info is required.');
            if (!data.city.trim()) setError('city', 'City is required.');
            if (!data.state.trim()) setError('state', 'State is required.');
            if (!['home', 'work', 'other'].includes(data.addressType))
                setError('addressType', 'Select home, work, or other.');
            if (!valid) return;


            const btn = document.getElementById('saveBtn');
            const textSpan = document.getElementById('buttonText');
            const spinner = document.getElementById('spinner');
            spinner.classList.remove('hidden');
            textSpan.textContent = 'Saving...';
            btn.disabled = true;

            const from = '<%= from === "checkout" ? "checkout" : "profile" %>';

            try {
                const res = await fetch(`/profile/add-address?from=${from}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify(data)
                });
                
                const json = await res.json();

                if (json.success) {
                    await Swal.fire({
                        icon: 'success',
                        title: 'Saved!',
                        text: 'Your address has been added.',
                        timer: 1400,
                        showConfirmButton: false,
                        timerProgressBar: true,
                        customClass: { popup: 'swal-responsive' }
                    });

                    window.location.href = from === 'checkout'
                        ? '/checkout/place-order'
                        : '/profile/addresses';

                } else {
                    Object.entries(json.errors || {}).forEach(([f, msg]) => {
                        const span = document.getElementById(f + 'Error');
                        if (span) span.textContent = msg;
                    });
                }
            } catch (error) {
                console.error(error);
                Swal.fire({
                    icon: 'error',
                    title: 'Oops…',
                    text: 'Something went wrong. Try again.'
                });
            } finally {
                spinner.classList.add('hidden');
                textSpan.textContent = 'Save Address';
                btn.disabled = false;
            }
        });

    </script>
