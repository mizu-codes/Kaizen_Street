    <link href="/css/responsiveUser.css" rel="stylesheet" type="text/css">
    <style>
        .main-content {
            flex: 1;
            background: white;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
            overflow: hidden;
        }

        .profile-header {
            background: linear-gradient(135deg, #e8f4f2 0%, #ddf0e8 100%);
            color: #374151;
            padding: 20px 30px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            border-bottom: 1px solid #e5e7eb;
        }

        .profile-header h3 {
            display: flex;
            align-items: center;
            font-size: 22px;
            font-weight: 600;
            margin: 0;
            color: black;
        }

        .profile-header i {
            margin-right: 10px;
            font-size: 22px;
            color: #10b981;
        }

        .add-address-btn {
            margin-top: 10px;
            font-size: 15px;
            font-weight: 600;
            padding: 5px 14px;
            color: white;
            background: #088178;
            border-radius: 14px;
            text-transform: uppercase;
            letter-spacing: 1px;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.05);
            display: flex;
            align-items: center;
            border: none;
        }

        .add-address-btn:hover {
            background: #06675f;
            color: #ffffff;
        }

        .btn-back {
            display: flex;
            align-items: center;
            background: #2ea368;
            color: white;
            border: none;
            padding: 6px 12px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            cursor: pointer;
            font-size: 13px;
        }

        .btn-back:hover {
            background: #059669;
            color: white;
            transform: translateY(-1px);
            box-shadow: 0 6px 20px rgba(59, 183, 126, 0.4);
        }

        .btn-back i {
            margin-right: 6px;
            color: white;
            font-size: 1.3rem;
        }

        .profile-body {
            padding: 25px 30px;
        }

        .add-address-form {
            max-width: 800px;
        }

        .form-title {
            color: #2c3e50;
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 30px;
            display: flex;
            align-items: center;
        }

        .form-title i {
            margin-right: 10px;
            color: #10b981;
        }

        .form-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 10px;
            margin-bottom: 25px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
        }

        .form-group.full-width {
            grid-column: 1 / -1;
        }

        .form-label {
            color: #374151;
            font-weight: 600;
            margin-bottom: 8px;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .form-label.required::after {
            content: ' *';
            color: #ef4444;
        }

        .form-input {
            padding: 14px 16px;
            border: 2px solid #e5e7eb;
            border-radius: 10px;
            font-size: 16px;
            transition: all 0.3s ease;
            background: #f9fafb;
        }

        .form-input:focus {
            outline: none;
            border-color: #10b981;
            background: white;
            box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
        }

        .form-input::placeholder {
            color: #9ca3af;
        }

        .form-textarea {
            min-height: 80px;
            resize: vertical;
            font-family: inherit;
        }

        .form-select {
            font-size: 0.8rem;
            appearance: none;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='m6 8 4 4 4-4'/%3e%3c/svg%3e");
            background-position: right 12px center;
            background-repeat: no-repeat;
            background-size: 16px;
            padding-right: 40px;
            height: 47px;
            /* Match input height */
            line-height: 1.2;
        }

        .error-message {
            color: red;
            font-size: 0.875rem;
            margin-top: 4px;
            display: block;
        }


        .radio-group {
            display: flex;
            gap: 20px;
            margin-top: 10px;
        }

        .radio-option {
            display: flex;
            align-items: center;
            cursor: pointer;
            padding: 10px 16px;
            border: 2px solid #e5e7eb;
            border-radius: 8px;
            transition: all 0.3s ease;
            background: #f9fafb;
        }

        .radio-option:hover {
            border-color: #10b981;
            background: #ecfdf5;
        }

        .radio-option.selected {
            border-color: #10b981;
            background: #ecfdf5;
            color: #10b981;
        }

        .radio-option input[type="radio"] {
            margin-right: 10px;
            transform: scale(1.2);
            accent-color: #10b981;
        }

        .radio-option i {
            margin-right: 8px;
            font-size: 18px;
        }

        .form-actions {
            display: -webkit-inline-box;
            gap: 1rem;
            margin-top: 1rem;
        }


        .form-note {
            background: #ecfdf5;
            border-left: 4px solid #10b981;
            padding: 12px;
            border-radius: 0 6px 6px 0;
            margin-bottom: 20px;
            color: #065f46;
        }

        .form-note i {
            margin-right: 8px;
            color: #10b981;
        }

        .swal-responsive {
            width: 90% !important;
            max-width: 320px !important;
            padding: 1.2rem !important;
            border-radius: 10px;
            font-size: 0.95rem;
        }


        .spinner {
            display: inline-block;
            width: 1rem;
            height: 1rem;
            border: 2px solid #fff;
            border-top: 2px solid transparent;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
            margin-left: 0.5rem;
        }

        .hidden {
            display: none;
        }

        @keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }


        @media (max-width: 768px) {
            .profile-wrapper {
                flex-direction: column;
            }

            .profile-sidebar {
                width: 100%;
                position: static;
            }

            .form-grid {
                grid-template-columns: 1fr;
            }

            .profile-header {
                padding: 15px 20px;
            }

            .profile-body {
                padding: 20px;
            }

            .radio-group {
                flex-direction: column;
            }

            .form-actions {
                flex-direction: column-reverse;
                align-items: center;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }

            /* Radio option mobile styles */
            .radio-option {
                padding: 0.875rem 0.75rem;
                min-height: 3.5rem;
            }

            .radio-option input[type="radio"] {
                width: 1.125rem;
                height: 1.125rem;
                margin-right: 0.625rem;
            }

            .radio-option i {
                font-size: 1.125rem;
                margin-right: 0.625rem;
            }

            .radio-option span {
                font-size: 0.9375rem;
            }

            .form-label {
                font-size: 0.875rem;
                margin-bottom: 0.5rem;
            }

        }
    </style>
</head>

