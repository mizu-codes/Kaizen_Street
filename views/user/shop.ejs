<script>
// Function to build URL with all current filters
function buildFilterURL(newParams = {}) {
    const urlParams = new URLSearchParams(window.location.search);
    
    // Apply new parameters
    Object.keys(newParams).forEach(key => {
        if (newParams[key] === null || newParams[key] === '') {
            urlParams.delete(key);
        } else {
            urlParams.set(key, newParams[key]);
        }
    });
    
    // Always reset to page 1 when filters change
    urlParams.set('page', '1');
    
    return window.location.pathname + '?' + urlParams.toString();
}

// Handle search form submission
function handleSearchSubmit(event) {
    // Let the form submit naturally with hidden inputs
    return true;
}

// Clear search while maintaining other filters
function clearSearch() {
    const newURL = buildFilterURL({ search: null });
    window.location.href = newURL;
}

// Filter by category while maintaining other filters
function filterByCategory(categoryId) {
    event.preventDefault();
    const newURL = buildFilterURL({ category: categoryId });
    window.location.href = newURL;
}

// Apply price filter while maintaining other filters
function applyPriceFilter() {
    const minPrice = document.getElementById('min-price').value;
    const maxPrice = document.getElementById('max-price').value;
    
    const newURL = buildFilterURL({ 
        minPrice: minPrice, 
        maxPrice: maxPrice 
    });
    window.location.href = newURL;
}

// Remove specific filter
function removeFilter(filterType) {
    let params = {};
    
    switch(filterType) {
        case 'search':
            params.search = null;
            break;
        case 'category':
            params.category = null;
            break;
        case 'price':
            params.minPrice = null;
            params.maxPrice = null;
            break;
    }
    
    const newURL = buildFilterURL(params);
    window.location.href = newURL;
}

// Clear all filters
function clearAllFilters() {
    window.location.href = window.location.pathname + '?page=1';
}

// Initialize price slider
$(document).ready(function() {
    const minPrice = parseInt('<%= actualMinPrice %>') || 0;
    const maxPrice = parseInt('<%= actualMaxPrice %>') || 5000;
    const currentMin = parseInt('<%= minPrice %>') || minPrice;
    const currentMax = parseInt('<%= maxPrice %>') || maxPrice;

    $("#slider-range").slider({
        range: true,
        min: minPrice,
        max: maxPrice,
        values: [currentMin, currentMax],
        slide: function(event, ui) {
            $("#amount").val("₹" + ui.values[0] + " - ₹" + ui.values[1]);
            $("#min-price").val(ui.values[0]);
            $("#max-price").val(ui.values[1]);
        }
    });

    

    // Set initial display value
    $("#amount").val("₹" + minPrice + " - ₹" + maxPrice);
    
    // Handle clear search button visibility
    const searchInput = document.getElementById('searchInput');
    const clearButton = document.getElementById('clear-search');
    
    function toggleClearButton() {
        if (searchInput.value.trim()) {
            clearButton.style.display = 'block';
        } else {
            clearButton.style.display = 'none';
        }
    }
    
    if (searchInput && clearButton) {
        searchInput.addEventListener('input', toggleClearButton);
        toggleClearButton(); // Initial check
    }
});



