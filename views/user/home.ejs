                                                        alt="<%= product.productName %>">
                                                    <% if (product.productImage[1]) { %>
                                                        <img class="hover-img" src="<%= product.productImage[1] %>"
                                                            alt="<%= product.productName %> hover">
                                                        <% } %>
                                                </a>
                                            </div>
