                                                    data-product-id="<%= product._id %>" data-size="M">
                                                    <i class="fi-rs-heart"></i>
                                                </a>
                                            </div>
                                            <% if (product.offer && product.offer.hasOffer) { %>
                                                <div class="product-badges product-badges-position product-badges-mrg">
                                                    <span class="<%= product.offer.discountPercentage >= 30 && product.offer.discountPercentage <= 50 ? 'hot'
                                                    : product.offer.discountPercentage < 30 ? 'best' : 'sale' %>">
                                                        <% if (product.offer.discountPercentage>= 30 &&
                                                            product.offer.discountPercentage <= 50) { %>
                                                                Hot
                                                                <% } else if (product.offer.discountPercentage < 30) {
                                                                    %>
                                                                    Best Sell
                                                                    <% } else { %>
                                                                        Sale
                                                                        <% } %>
                                                    </span>
                                                </div>
