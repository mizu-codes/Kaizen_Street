    <style>
        .success-container {
            max-width: 1000px;
            width: 100%;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 80px;
            align-items: center;
            padding: 60px 20px;
            margin: 0 auto;
        }

        .content {
            display: flex;
            flex-direction: column;
            gap: 24px;
        }

        .status-title {
            font-size: 14px;
            font-weight: 500;
            color: #666;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 8px;
        }

        .congratulations {
            font-size: 32px;
            font-weight: 700;
           background-color: black;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 20px;
        }

        .order-info {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .order-status {
            font-size: 18px;
            font-weight: 500;
            color: #333;
        }

        .delivery-date {
            font-size: 16px;
            color: #666;
        }

        .buttons {
            display: flex;
            gap: 16px;
            margin-top: 8px;
        }

        .btn {
            padding: 10px 20px;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 500;
            text-decoration: none;
            cursor: pointer;
            border: none;
            transition: all 0.2s ease;
            display: inline-block;
            text-align: center;
            min-width: 120px;
        }

        .success-btn-primary {
            background: linear-gradient(135deg, #ff1744 0%, #f50057 50%, #c51162 100%);
            color: white;
            padding: 12px 24px;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 500;
            text-decoration: none;
            cursor: pointer;
            border: none;
            transition: all 0.2s ease;
            display: inline-block;
            text-align: center;
            min-width: 140px;
        }

        .success-btn-primary:hover {
            background: linear-gradient(135deg, #e91e63 0%, #ad1457 50%, #880e4f 100%);
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(255, 23, 68, 0.3);
            color: white;
        }

        .success-btn-secondary {
            background-color: transparent;
            color: #ff1744;
            border: 2px solid #ff1744;
            padding: 10px 22px;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 500;
            text-decoration: none;
            cursor: pointer;
            transition: all 0.2s ease;
            display: inline-block;
            text-align: center;
            min-width: 140px;
        }

        .success-btn-secondary:hover {
            background: linear-gradient(135deg, #ff1744 0%, #f50057 50%, #c51162 100%);
            color: white;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(255, 23, 68, 0.3);
        }

        .image-section {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        
        .main-content {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: calc(100vh - 200px); 
            padding: 40px 0;
        }

        @media (max-width: 768px) {
            .success-container {
                grid-template-columns: 1fr;
                gap: 40px;
                padding: 40px 20px;
            }

            .congratulations {
                font-size: 28px;
            }

            .buttons {
                flex-direction: column;
            }
        }
    </style>
</head>

