            margin-top: 8px;
        }

        .failed-btn-primary {
            background: linear-gradient(135deg, #ff1744 0%, #f50057 50%, #c51162 100%);
            color: white;
            border: 2px solid #ff1744;
            padding: 8px 13px;
            border-radius: 6px;
            font-size: 13px;
            font-weight: 500;
            text-decoration: none;
            cursor: pointer;
            transition: all 0.2s ease;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            text-align: center;
            white-space: nowrap;
        }

        .failed-btn-primary:hover {
            background: linear-gradient(135deg, #e91e63 0%, #ad1457 50%, #880e4f 100%);
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(255, 23, 68, 0.3);
            color: white;
        }

        .failed-btn-primary:disabled {
            background: #ccc;
            cursor: not-allowed;
            transform: none;
        }

        .failed-btn-secondary {
            background-color: transparent;
            color: #ff1744;
            border: 2px solid #ff1744;
            padding: 8px 13px;
            border-radius: 6px;
            font-size: 13px;
            font-weight: 500;
            text-decoration: none;
            cursor: pointer;
            transition: all 0.2s ease;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            text-align: center;
            white-space: nowrap;
        }

        .failed-btn-secondary:hover {
            background: linear-gradient(135deg, #ff1744 0%, #f50057 50%, #c51162 100%);
            color: white;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(255, 23, 68, 0.3);
        }

        .image-section {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .image-section img {
            opacity: 0;
            transform: translateY(50px) scale(0.8) rotateX(20deg);
            animation: bounceInUp 1s cubic-bezier(0.68, -0.55, 0.265, 1.55) 0.3s forwards;
            filter: blur(10px);
        }

        @keyframes bounceInUp {
            0% {
                opacity: 0;
                transform: translateY(50px) scale(0.8) rotateX(20deg);
                filter: blur(10px);
            }

            60% {
                opacity: 1;
                transform: translateY(-10px) scale(1.05) rotateX(-5deg);
                filter: blur(0);
            }

            80% {
                transform: translateY(5px) scale(0.98) rotateX(2deg);
            }

            100% {
                opacity: 1;
                transform: translateY(0) scale(1) rotateX(0deg);
                filter: blur(0);
            }
        }

        .main-content {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: calc(100vh - 200px);
            padding: 40px 0;
        }

        .error-code {
