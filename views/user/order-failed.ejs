    <script>
        async function retryPayment() {
            const retryBtn = document.getElementById('retryBtn');
            const originalText = retryBtn.innerHTML;

            try {
                retryBtn.disabled = true;
                retryBtn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Validating...';

                const orderDetails = sessionStorage.getItem('failedOrderDetails');

                if (!orderDetails) {
                    window.location.href = '/cart';
                    return;
                }

                const parsedDetails = JSON.parse(orderDetails);

                const res = await fetch('/checkout/retry-payment', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        addressId: parsedDetails.addressId,
                        couponData: parsedDetails.couponData
                    })
                });

                const data = await res.json();

                if (data.success && data.canRetry) {
                    await Swal.fire({
                        icon: 'info',
                        title: 'Redirecting...',
                        text: 'Taking you back to checkout',
                        timer: 1500,
                        showConfirmButton: false,
                        customClass: {
                            popup: 'swal-responsive'
                        }
                    });

                    window.location.href = '/checkout/place-order';
                } else {
                    throw new Error(data.message || 'Unable to retry payment');
                }

            } catch (error) {
                console.error('Retry payment error:', error);

                await Swal.fire({
                    icon: 'error',
                    title: 'Cannot Retry',
                    text: error.message || 'Please go to checkout and try again.',
                    confirmButtonText: 'Go to Checkout',
                    customClass: {
                        popup: 'swal-responsive'
                    }
                });

                sessionStorage.removeItem('failedOrderDetails');
                sessionStorage.removeItem('paymentFailureDetails');

                window.location.href = '/checkout/place-order';

            } finally {
                retryBtn.disabled = false;
                retryBtn.innerHTML = originalText;
            }
        }

        window.history.pushState(null, '', window.location.href);
        window.addEventListener('popstate', function () {
            window.history.pushState(null, '', window.location.href);
        });

        document.addEventListener('DOMContentLoaded', function () {
            const failureDetails = sessionStorage.getItem('paymentFailureDetails');
            if (failureDetails) {
                console.log('Payment Failure Details:', JSON.parse(failureDetails));
            }
        });
    </script>

