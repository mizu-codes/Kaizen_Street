    <script>

        const MAX_PER_PRODUCT = 5;

        function updateSummaryItem(productId, size, newQty, newSubtotal) {
            const summaryItem = document.querySelector(
                `.summary-item[data-product-id="${productId}"][data-size="${size}"]`
            );
            if (!summaryItem) return;

            const qtyEl = summaryItem.querySelector('.summary-qty');
            if (qtyEl) qtyEl.textContent = newQty;

            const subtotalEl = summaryItem.querySelector('.summary-subtotal');
            if (subtotalEl) subtotalEl.textContent = newSubtotal;
        }

        document.querySelectorAll('.decrease-qty, .increase-qty').forEach(btn => {
            btn.addEventListener('click', async e => {
                const isIncrease = e.currentTarget.classList.contains('increase-qty');
                const itemEl = e.currentTarget.closest('.cart-item');
                const productId = itemEl.dataset.productId;
                const size = itemEl.dataset.size;
                const input = itemEl.querySelector('.qty-input');

                let newQty = parseInt(input.value, 10) + (isIncrease ? 1 : -1);
                const max = parseInt(input.max, 10);
                newQty = Math.max(1, Math.min(max, newQty));

                if (isIncrease && newQty > MAX_PER_PRODUCT) {
                    return Swal.fire({
                        icon: 'error',
                        title: 'Limit Reached',
                        text: 'You can only add up to 5 of this item in your cart.',
                        timer: 1500,
                        showConfirmButton: false,
                        customClass: {
                            popup: 'swal-responsive'
                        }
                    });
                }

                try {
                    const res = await fetch('/cart/update-quantity', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ productId, size, quantity: newQty })
                    });
                    const data = await res.json();
                    if (!res.ok) throw new Error(data.error);

                    input.value = newQty;
                    itemEl.querySelector('.subtotal').textContent = '₹' + data.subtotal;
                    document.querySelector('.total-amount').textContent = '₹' + data.cartTotal;
                    itemEl.querySelector('.decrease-qty').disabled = newQty <= 1;
                    itemEl.querySelector('.increase-qty').disabled = newQty >= Math.min(data.available, MAX_PER_PRODUCT);

                    updateSummaryItem(productId, size, newQty, data.subtotal);

                } catch (err) {
                    alert(err.message);
                }
            });
        });

        document.querySelectorAll('.remove-btn').forEach(btn => {
            btn.addEventListener('click', async e => {
                e.preventDefault();
                const itemEl = e.currentTarget.closest('.cart-item');
                const productId = itemEl.dataset.productId;
                const size = itemEl.dataset.size;

                const { value: shouldDelete } = await Swal.fire({
                    title: 'Remove this item?',
                    text: 'Are you sure you want to remove it from your cart?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, remove it',
                    cancelButtonText: 'Cancel',
                    focusCancel: true,
                    customClass: {
                        popup: 'swal-responsive'
                    }
                });

                if (!shouldDelete) return;

                try {
                    const res = await fetch('/cart/delete-quantity', {
                        method: 'DELETE',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ productId, size })
                    });
                    const data = await res.json();
                    if (!res.ok) throw new Error(data.error);

                    itemEl.remove();
                    const summaryItem = document.querySelector(
                        `.summary-item[data-product-id="${productId}"][data-size="${size}"]`
                    );
                    if (summaryItem) summaryItem.remove();
                    document.querySelector('.total-amount').textContent = '₹' + data.cartTotal;

                    await Swal.fire({
                        icon: 'success',
                        title: 'Removed!',
                        text: 'Item has been removed from your cart.',
                        timer: 1500,
                        showConfirmButton: false,
                        customClass: {
                            popup: 'swal-responsive'
                        }
                    });

                    if (document.querySelectorAll('.cart-item').length === 0) {
                        window.location.reload();
                    }
                } catch (err) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: err.message || 'Something went wrong.'
                    });
                }
            });
        });
        document.addEventListener('DOMContentLoaded', function () {
            const cartItems = document.querySelectorAll('.cart-item');
            cartItems.forEach((item, index) => {
                item.style.opacity = '0';
                item.style.transform = 'translateY(20px)';

                setTimeout(() => {
                    item.style.transition = 'all 0.5s ease';
                    item.style.opacity = '1';
                    item.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });

        function proceedToCheckout() {
            window.location.href = '/checkout/place-order';
        }

    </script>

