    <div class="cart-container">
        <div class="cart-content">
            <div class="cart-items-section">
                <div class="cart-header">
                    <h1 class="cart-title">Discover Items In Your Cart</h1>
                    <p class="cart-subtitle">Review your selected items and proceed to checkout</p>
                </div>

                <% if (!items || items.length===0) { %>
                    <div class="empty-cart">
                        <div class="empty-cart-icon">🛒</div>
                        <h3>Your cart is empty</h3>
                        <p>Add some awesome items to get started!</p><br>
                        <a href="/shop" class="continue-shopping-btn" style="margin-top:20px;">
                            Continue Shopping
                        </a>
                    </div>
                    <% } else { %>
                        <% items.forEach(item=> { %>
                            <div class="cart-item <%= item.stock === 0 ? 'out-of-stock' : '' %>"
                                data-product-id="<%= item._id %>" data-size="<%= item.size %>">

                                <div class="item-image">
                                    <img src="<%= item.productImage %>" alt="<%= item.productName %>"
                                        onerror="this.src='/imgs/theme/placeholder.jpg'">
                                </div>

                                <div class="item-details">
                                    <div class="item-category">
                                        <%= item.categoryName %>
                                    </div>
                                    <h3 class="item-name">
                                        <%= item.productName %>
                                    </h3>
                                    <div class="item-size">Size: <%= item.size %>
                                    </div>

                                    <div class="item-price-section">
                                        <% if (item.originalPrice && item.originalPrice> item.price) { %>
                                            <span class="item-original-price">₹<%= item.originalPrice %></span>
                                            <span class="discount-badge">
                                                <%= Math.round(((item.originalPrice - item.price) / item.originalPrice)
                                                    * 100) %>% OFF
                                            </span>
                                            <% } %>
                                                <span class="item-price">₹<%= item.price %></span>
                                    </div>
                                </div>

                                <div class="item-actions">
                                    <% if (item.stock===0) { %>
                                        <div class="oos-label">Out of stock</div>
                                        <% } %>

                                            <% const uiMax=Math.min(item.stock, 5); %>

                                                <div class="quantity-controls">
                                                    <button class="qty-btn decrease-qty" <%=item.quantity <=1 ||
                                                        item.stock===0 ? 'disabled' : '' %>>–
                                                    </button>

                                                    <input type="number" class="qty-input" value="<%= item.quantity %>"
                                                        min="1" max="<%= uiMax %>" readonly>

                                                    <button class="qty-btn increase-qty" <%=item.stock===0 ||
                                                        item.quantity>= uiMax ? 'disabled' : '' %>>+
                                                    </button>
                                                </div>


                                                <button class="remove-btn" data-product-id="<%= item._id %>"
                                                    data-size="<%= item.size %>">
                                                    <svg class="delete-icon" viewBox="0 0 24 24">
                                                        <path
