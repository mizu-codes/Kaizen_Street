                           Placed on <% if (order.createdAt) { %>
                            <%= order.createdAt %>
                            <% } else { %> Recently <% } %>
                          </div>
                        </div>

                        <% const currency=(v)=> {
                          let n = Number(v);
                          if (!isFinite(n)) n = 0;
                          return n.toLocaleString('en-IN', { style: 'currency', currency: 'INR', maximumFractionDigits:
                          2 });
                          };
                          %>

                          <div class="order-items">
                            <% order.items.forEach((item, index)=> { %>
                              <% const itemOriginalSubtotal=(typeof item.subtotal==='number' && isFinite(item.subtotal))
                                ? item.subtotal : (Number(item.price) || 0) * (Number(item.quantity) || 0); let
                                itemDiscountAmount=0; if (orderDiscount> 0 && orderOriginalTotal > 0) {
                                const itemDiscountProportion = itemOriginalSubtotal / orderOriginalTotal;
                                itemDiscountAmount = orderDiscount * itemDiscountProportion;
                                }
                                let itemActualPaid = itemOriginalSubtotal - itemDiscountAmount;

                                const round2 = (v) => Math.round((Number(v) || 0) * 100) / 100;
                                itemDiscountAmount = round2(itemDiscountAmount);
                                itemActualPaid = round2(itemActualPaid);
                                %>

                                <div class="order-item" data-item-id="<%= item._id %>">
                                  <img src="<%= item.image || '/imgs/placeholder.jpg' %>" alt="<%= item.name %>"
                                    class="item-image" onerror="this.src='/imgs/placeholder.jpg'" />

                                  <div class="item-details">
                                    <div class="item-name">
                                      <%= item.name %>
                                    </div>

                                    <div class="item-meta">
                                      <span><i class="fi-rs-resize"></i> Size: <%= item.size || 'Standard' %></span>
                                      |
                                      <span><i class="fi-rs-box"></i> Qty: <%= item.quantity %></span>
                                    </div>

                                    <div class="item-price">
                                      <% if (orderDiscount> 0 && orderOriginalTotal > 0) { %>
                                        <div class="price-with-discount">
                                          <span class="original-price">
                                            <%= currency(itemOriginalSubtotal) %>
                                          </span>

                                          <div class="summary-row discount-row">
                                            <span>Coupon Discount:</span>
                                            <span>-<%= currency(itemDiscountAmount) %></span>
                                          </div>

                                          <span class="paid-price">
                                            <% if (order.status==='Payment Failed' ) { %>
                                              Due: <%= currency(itemActualPaid) %>
                                                <% } else { %>
                                                  Paid: <%= currency(itemActualPaid) %>
                                                    <% } %>
                                          </span>
                                        </div>
                                        <% } else { %>
                                          <%= currency(item.price) %> √ó <%= item.quantity %> = <%=
                                                currency(itemOriginalSubtotal) %>
                                                <% } %>
                                    </div>
                                  </div>

                                  <div
                                    class="order-status status-<%= (item.status || order.status).toLowerCase().replace(/\s+/g, '-') %>">
                                    <%= item.status || order.status %>
                                  </div>
                                </div>
                                <% }); %>
                          </div>

                      </div>
                    </div>
                    <% }); %>
                      <% } else { %>
                        <div class="no-orders">
                          <div class="icon-container">
                            <i class="fas fa-shopping-bag"></i>
                          </div>
                          <h3>No Orders Found</h3>
                          <p>
                            You haven't placed any orders yet. Start shopping to see
                            your orders here!
                          </p>
                          <a href="/shop" class="btn-shop-now">
                            <i class="fas fa-shopping-cart"></i> Start Shopping
                          </a>
                        </div>
                        <% } %>
            </div>
            <% if (totalPages> 1) { %>
              <div class="pagination-container">
                <div class="pagination">
                  <% if (currentPage> 1) { %>
                    <a href="?page=<%= currentPage - 1 %><%= q ? '&q=' + encodeURIComponent(q) : '' %>"
                      class="page-btn prev-btn">
                      <i class="fi-rs-angle-left"></i> Previous
                    </a>
                    <% } else { %>
                      <button class="page-btn prev-btn" disabled>
                        <i class="fi-rs-angle-left"></i> Previous
                      </button>
                      <% } %>

                        <% const maxVisible=5; let startPage=Math.max(1, currentPage - Math.floor(maxVisible / 2)); let
                          endPage=Math.min(totalPages, startPage + maxVisible - 1); if (endPage - startPage < maxVisible
                          - 1) { startPage=Math.max(1, endPage - maxVisible + 1); } %>

                          <% if (startPage> 1) { %>
                            <a href="?page=1<%= q ? '&q=' + encodeURIComponent(q) : '' %>" class="page-num">1</a>
                            <% if (startPage> 2) { %>
                              <span class="page-dots">...</span>
                              <% } %>
                                <% } %>

                                  <% for (let i=startPage; i <=endPage; i++) { %>
                                    <a href="?page=<%= i %><%= q ? '&q=' + encodeURIComponent(q) : '' %>"
                                      class="page-num <%= i === currentPage ? 'active' : '' %>">
                                      <%= i %>
                                    </a>
                                    <% } %>

                                      <% if (endPage < totalPages) { %>
                                        <% if (endPage < totalPages - 1) { %>
                                          <span class="page-dots">...</span>
                                          <% } %>
                                            <a href="?page=<%= totalPages %><%= q ? '&q=' + encodeURIComponent(q) : '' %>"
                                              class="page-num">
                                              <%= totalPages %>
                                            </a>
                                            <% } %>


                                              <% if (currentPage < totalPages) { %>
                                                <a href="?page=<%= currentPage + 1 %><%= q ? '&q=' + encodeURIComponent(q) : '' %>"
                                                  class="page-btn next-btn">
                                                  Next <i class="fi-rs-angle-right"></i>
                                                </a>
                                                <% } else { %>
                                                  <button class="page-btn next-btn" disabled>
                                                    Next <i class="fi-rs-angle-right"></i>
                                                  </button>
                                                  <% } %>
                </div>
              </div>
              <% } %>
          </div>
        </div>

      </main>
    </div>
