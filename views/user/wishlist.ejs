    <script>

        async function fetchProductStock(productId) {
            try {
                const res = await fetch(`/api/product/${productId}/stock`);
                if (!res.ok) throw new Error('Failed to fetch stock');
                const data = await res.json();
                return data.stock || {};
            } catch (error) {
                console.error('Error fetching stock:', error);
                return null;
            }
        }

        async function addToCartFromWishlist(productId, productName) {
            try {
                const stock = await fetchProductStock(productId);

                if (!stock) {
                    return Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Unable to fetch product stock. Please try again.',
                        customClass: { popup: 'swal-responsive' }
                    });
                }

                const sizes = ['S', 'M', 'L', 'XL', 'XXL'];
                let selectedSize = null;

                const sizeOptionsHtml = sizes.map(size => {
                    const qty = stock[size] || 0;
                    const outOfStock = qty === 0;
                    return `<div class="size-option ${outOfStock ? 'out-of-stock' : ''}" 
                             data-size="${size}" 
                             data-stock="${qty}"
                             ${outOfStock ? 'style="pointer-events: none;"' : ''}>
                            ${size}
                        </div>`;
                }).join('');
                const { isConfirmed } = await Swal.fire({
                    title: `Select a size:`,
                    html: `<div class="size-selector">
                            ${sizeOptionsHtml}
                        </div>
                        <div class="stock-info" id="stockInfo" style="display: none;">
                            Select a size to see availability
                        </div>`,
                    showCancelButton: true,
                    confirmButtonText: 'Add to Cart',
                    cancelButtonText: 'Cancel',
                    confirmButtonColor: '#667eea',
                    cancelButtonColor: '#6c757d',
                    customClass: { popup: 'swal-responsive' },
                    preConfirm: () => {
                        if (!selectedSize) {
                            Swal.showValidationMessage('Please select a size');
                            return false;
                        }
                        return selectedSize;
                    },
                    didOpen: () => {
                        document.querySelectorAll('.size-option:not(.out-of-stock)').forEach(option => {
                            option.addEventListener('click', function () {
                                document.querySelectorAll('.size-option').forEach(opt =>
                                    opt.classList.remove('selected')
                                );

                                this.classList.add('selected');
                                selectedSize = this.dataset.size;

                                const stockQty = this.dataset.stock;
                                const stockInfo = document.getElementById('stockInfo');
                                stockInfo.style.display = 'block';
                                stockInfo.classList.remove('out-of-stock');
                                stockInfo.style.color = '#ff4757';
                                stockInfo.textContent = `${stockQty} items available in stock`;
                            });
                        });
                    }
                });

                if (!isConfirmed || !selectedSize) return;

                Swal.fire({
                    title: 'Adding to Cart...',
                    allowOutsideClick: false,
                    showConfirmButton: false,
                    willOpen: () => Swal.showLoading(),
                    customClass: { popup: 'swal-responsive' }
                });

                const response = await fetch(`/cart/add/${productId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    credentials: 'include',
                    body: JSON.stringify({ size: selectedSize })
                });

                const data = await response.json();

                if (!response.ok) {
                    throw new Error(data.message || 'Failed to add to cart');
                }

                await fetch(`/wishlist/delete/${productId}`, {
                    method: 'DELETE'
                });

                await Swal.fire({
                    icon: 'success',
                    title: 'Added to Cart!',
                    text: `Item has been added to your cart and removed from wishlist.`,
                    showConfirmButton: false,
                    timer: 2000,
                    customClass: { popup: 'swal-responsive' }
                });

                const card = document.querySelector(`[data-product-id="${productId}"]`);
                if (card) {
                    card.style.transition = 'all 0.3s ease';
                    card.style.opacity = '0';
                    card.style.transform = 'scale(0.8)';
                    setTimeout(() => card.remove(), 300);
                }

                document.dispatchEvent(new CustomEvent('cart:updated', {
                    detail: { count: data.cartCount }
                }));

                setTimeout(() => {
                    if (document.querySelectorAll('.wishlist-item').length === 0) {
                        location.reload();
                    }
                }, 500);

            } catch (error) {
                console.error('Add to cart error:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: error.message || 'Failed to add to cart. Please try again.',
                    customClass: { popup: 'swal-responsive' }
                });
            }
        }

        async function removeFromWishlist(productId) {
            const confirmResult = await Swal.fire({
                title: 'Remove from Wishlist?',
                text: 'Are you sure you want to remove this item?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, remove it!',
                cancelButtonText: 'Cancel',
                customClass: {
                    popup: 'swal-responsive'
                }
            });

            if (!confirmResult.isConfirmed) return;

            try {
                const res = await fetch(`/wishlist/delete/${productId}`, {
                    method: 'DELETE'
                });

                const data = await res.json();

                if (res.ok) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Removed!',
                        text: data.message,
                        timer: 1500,
                        showConfirmButton: false,
                        customClass: {
                            popup: 'swal-responsive'
                        }
                    });

                    const card = document.querySelector(`[data-product-id="${productId}"]`);
                    if (card) card.remove();

                    if (document.querySelectorAll('.wishlist-item').length === 0) {
                        document.querySelector('#wishlist-empty-message')?.classList.remove('d-none');
                    }

                } else {
                    Swal.fire('Error', data.message, 'error');
                }

            } catch (err) {
                console.error('Remove wishlist error:', err);
                Swal.fire('Error', 'Something went wrong.', 'error');
            }
        }
    </script>

