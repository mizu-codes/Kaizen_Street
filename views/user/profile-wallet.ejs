      <div class="container">
        <div class="header-wrap">
          <div class="logo logo-width-1">
            <a href="/"><img src="/imgs/theme/kaizenlogoo.svg" alt="logo"></a>
          </div>
          <div class="header-right">
            <div class="search-style-2"></div>
            <div class="header-action-right">
              <div class="header-action-2">
                <div class="header-action-icon-2">
                  <a href="/wishlist">
                    <img class="svgInject" alt="Evara" src="/imgs/theme/icons/icon-heart.svg">
                    <span id="wishlistItemCount" class="pro-count blue">
                      <%= typeof locals.wishlistItemCount !== 'undefined' ? locals.wishlistItemCount : 0 %>
                    </span>
                  </a>
                </div>
                <div class="header-action-icon-2">
                  <a class="mini-cart-icon" href="/cart">
                    <img alt="Evara" src="/imgs/theme/icons/icon-cart.svg">
                    <span id="cartItemCount" class="pro-count blue">
                      <%= typeof locals.cartItemCount !=='undefined' ? locals.cartItemCount : 0 %>
                    </span>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="header-bottom header-bottom-bg-color sticky-bar">
      <div class="container">
        <div class="header-wrap header-space-between position-relative">
          <div class="logo logo-width-1 d-block d-lg-none">
            <a href="/"><img src="/imgs/theme/kaizenlogoo.svg" alt="logo"></a>
          </div>
          <div class="header-nav d-none d-lg-flex">
            <div class="main-menu main-menu-padding-1 main-menu-lh-2 d-none d-lg-block">
              <nav>
                <ul>
                  <li><a href="/">Home</a></li>
                  <li><a href="/shop">Shop</a></li>
                </ul>
              </nav>
            </div>
          </div>
          <div class="header-action-right d-block d-lg-none">
            <div class="header-action-2">
              <div class="header-action-icon-2">
                <a href="/wishlist">
                  <img alt="Evara" src="/imgs/theme/icons/icon-heart.svg">
                  <span id="wishlistItemCount" class="pro-count blue">
                    <%= typeof locals.wishlistItemCount !== 'undefined' ? locals.wishlistItemCount : 0 %>
                  </span>
                </a>
              </div>
              <div class="header-action-icon-2">
                <a class="mini-cart-icon" href="/cart">
                  <img alt="Evara" src="/imgs/theme/icons/icon-cart.svg">
                  <span id="cartItemCount" class="pro-count blue">
                    <%= typeof locals.cartItemCount !=='undefined' ? locals.cartItemCount : 0 %>
                  </span>
                </a>
                <div class="header-action-icon-2 d-block d-lg-none">
                  <div class="burger-icon burger-icon-white">
                    <span class="burger-icon-top"></span>
                    <span class="burger-icon-mid"></span>
                    <span class="burger-icon-bottom"></span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  </header>

  <div class="page-header breadcrumb-wrap">
    <div class="container">
      <div class="breadcrumb" aria-label="Breadcrumb navigation">
        <a href="/" rel="nofollow">Home</a>
        <span></span> Profile
        <span></span> My Wallet
      </div>
    </div>
  </div>

  <div class="profile-container">
    <div class="profile-layout">
      <button class="mobile-sidebar-toggle" onclick="toggleSidebar()">
        <span>
          <i class="fi-rs-menu"></i>
          My Account Menu
        </span>
        <i class="fi-rs-angle-down toggle-icon"></i>
      </button>

      <aside class="profile-sidebar" id="profileSidebar">
        <h4>My Account</h4>
        <ul>
          <li>
            <a href="/userProfile">
              <i class="fi-rs-user"></i> My Profile
            </a>
          </li>
          <li>
            <a href="/orders">
              <i class="fi-rs-shopping-bag"></i> My Orders
            </a>
          </li>
          <li>
            <a href="/profile/addresses">
              <i class="fi-rs-marker"></i> My Addresses
            </a>
          </li>
          <li>
            <a href="/wallet" class="active">
              <i class="fi-rs-credit-card"></i> My Wallet
            </a>
          </li>
          <li>
            <a href="/profile/security">
              <i class="fi-rs-shield-check"></i> Security Settings
            </a>
          </li>
          <li>
            <a href="/logout">
              <i class="fi-rs-sign-out"></i> Logout
            </a>
          </li>
        </ul>
      </aside>

      <main class="main-content">
        <div class="profile-header">
          <h3><i class="ri-wallet-fill"></i> My Wallet</h3>
          <button class="btn-add-money" onclick="openAddMoneyModal()">
            <i class="ri-add-line"></i> Add Money
          </button>
        </div>

        <div class="profile-body">
          <div class="wallet-overview">
            <div class="balance-card">
              <div class="balance-header">
                <i class="ri-wallet-fill"></i>
                <div class="balance-title">Total Balance</div>
              </div>
              <div class="balance-amount">₹<%= wallet ? (typeof toDisplay === 'function' ? toDisplay(wallet.balance) : wallet.balance.toFixed(2)) : '0.00' %></div>
            </div>
          </div>

          <div class="transactions-section">
            <div class="section-header">
              <h4 class="section-title">
                <i class="ri-time-line"></i>
                Recent Transactions
              </h4>
              <% if (transactions && transactions.length > 0) { %>
              <a href="/wallet/history" class="view-all-btn">
                View All <i class="ri-arrow-right-line"></i>
              </a>
              <% } %>
            </div>

            <% if (!transactions || transactions.length === 0) { %>
            <div class="no-transactions">
              <div class="no-transactions-icon">
                <i class="ri-file-list-line"></i>
              </div>
              <h4>No transactions yet</h4>
              <p>Your transaction history will appear here once you start using your wallet.</p>
            </div>
            <% } else { %>
            <div class="transactions-list">
              <% transactions.slice(0, 5).forEach(transaction => { %>
              <div class="transaction-item">
                <div class="transaction-main">
                  <div class="transaction-icon <%= transaction.type === 'credit' ? 'credit' : 'debit' %>">
                    <i class="<%= transaction.type === 'credit' ? 'ri-arrow-down-line' : 'ri-arrow-up-line' %>"></i>
                  </div>
                  <div class="transaction-details">
                    <h4><%= transaction.description || transaction.title || 'Wallet Transaction' %></h4>
                    <p class="transaction-date">
                      <% if (transaction.createdAt || transaction.date) { %>
                      <%= new Date(transaction.createdAt || transaction.date).toLocaleString('en-IN', { 
                          year: 'numeric', 
                          month: 'short', 
                          day: 'numeric',
                          hour: '2-digit',
                          minute: '2-digit'
                      }) %>
                      <% } %>
                    </p>
                  </div>
                </div>
                <div class="transaction-amount">
                  <p class="amount-value <%= transaction.type === 'credit' ? 'credit' : 'debit' %>">
                    <%= transaction.type === 'credit' ? '+' : '-' %>₹<%= toDisplay(transaction.amount) %>
                  </p>
                  <p class="transaction-status status-<%= transaction.status || 'completed' %>">
                    <%= (transaction.status || 'completed').charAt(0).toUpperCase() + (transaction.status || 'completed').slice(1) %>
                  </p>
                </div>
              </div>
              <% }) %>
            </div>
            <% } %>
          </div>
        </div>
      </main>
    </div>
  </div>

  <div class="modal-overlay" id="addMoneyModal">
    <div class="modal-content">
      <div class="modal-header">
        <h4>Add Money to Wallet</h4>
        <button class="modal-close" onclick="closeAddMoneyModal()">
          <i class="ri-close-line"></i>
        </button>
      </div>

      <form id="addMoneyForm" onsubmit="addMoney(event)">
        <div class="modal-body">
          <div class="amount-input-group">
            <label for="amount">Enter Amount (₹)</label>
            <input type="number" id="amount" name="amount" class="amount-input" min="1" max="50000" step="0.01" placeholder="0.00" required>
          </div>

          <div class="quick-amounts">
            <button type="button" class="quick-amount" onclick="setAmount(500)">₹500</button>
            <button type="button" class="quick-amount" onclick="setAmount(1000)">₹1,000</button>
            <button type="button" class="quick-amount" onclick="setAmount(10000)">₹10,000</button>
          </div>
        </div>

        <div class="modal-actions">
          <button type="button" class="btn-cancel" onclick="closeAddMoneyModal()">Cancel</button>
          <button type="submit" class="btn-add">
            <span id="addButtonText">Add Money</span>
