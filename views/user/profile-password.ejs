            /* Strong, visible shadow */
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        }


        .password-form .form-group {
            margin-bottom: 1.5rem;
        }

        .password-input-wrapper {
            position: relative;
            display: flex;
            align-items: center;
        }

        .password-input-wrapper input {
            width: 100%;
            padding: 0.75rem 2.5rem 0.75rem 1rem;
            font-size: 1rem;
            border: 1px solid #ddd;
            border-radius: 6px;
        }

        .password-input-wrapper i {
            position: absolute;
            right: 1rem;
            color: #888;
            cursor: pointer;
            font-size: 1.1rem;
        }

        .password-input-wrapper i:hover {
            color: #3BB77E;
        }

        .btn-update {
            background: linear-gradient(90deg, #FF416C, #FF4B2B);
            border: none;
            padding: 0.75rem 2rem;
            font-size: 1rem;
            font-weight: bold;
            color: #fff;
            border-radius: 8px;
            cursor: pointer;
            box-shadow: 0 4px 15px rgba(255, 65, 108, 0.3);
            transition: background 0.3s ease;
            display: inline-block;
            /* fit content */
            margin: 0 auto;
            /* center it */
        }

        .btn-update:hover {
            background: linear-gradient(90deg, #ff4b2b, #ff416c);
        }

        .form-actions {
            display: flex;
            justify-content: center;
            margin-top: 1.5rem;
        }

        .error-message {
            color: #e74c3c;
            /* bright red */
            font-size: 0.875rem;
            /* 14px */
            margin-top: 0.25rem;
            display: block;
            min-height: 1em;
            /* reserve space */
        }

        .spinner {
            width: 16px;
            height: 16px;
            border: 2px solid #ffffff;
            border-top: 2px solid transparent;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-right: 8px;
            display: inline-block;
        }

          .google-login-info {
            text-align: center;
            padding: 76px;
        }

        .google-icon {
            width: 64px;
            height: 64px;
            margin-bottom: 24px;
