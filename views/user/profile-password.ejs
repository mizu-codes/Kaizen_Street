            align-items: center;
        }

        .password-input-wrapper input {
            width: 100%;
            padding: 0.75rem 2.5rem 0.75rem 1rem;
            font-size: 1rem;
            border: 1px solid #ddd;
            border-radius: 6px;
        }

        .password-input-wrapper i {
