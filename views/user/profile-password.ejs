            font-weight: bold;
            color: #fff;
            border-radius: 8px;
            cursor: pointer;
            box-shadow: 0 4px 15px rgba(255, 65, 108, 0.3);
            transition: background 0.3s ease;
            display: inline-block;
            /* fit content */
            margin: 0 auto;
            /* center it */
        }

        .btn-update:hover {
            background: linear-gradient(90deg, #ff4b2b, #ff416c);
        }

        .form-actions {
            display: flex;
            justify-content: center;
            margin-top: 1.5rem;
        }

        .error-message {
            color: #e74c3c;
            /* bright red */
            font-size: 0.875rem;
            /* 14px */
            margin-top: 0.25rem;
            display: block;
            min-height: 1em;
            /* reserve space */
        }

        .spinner {
            width: 16px;
            height: 16px;
            border: 2px solid #ffffff;
            border-top: 2px solid transparent;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-right: 8px;
            display: inline-block;
        }

        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        .btn-update:disabled {
            opacity: 0.7;
            cursor: not-allowed;
        }
