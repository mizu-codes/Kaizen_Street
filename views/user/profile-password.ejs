    <script>

         function toggleSidebar() {
            const sidebar = document.getElementById('profileSidebar');
            const toggle = document.querySelector('.mobile-sidebar-toggle');

            sidebar.classList.toggle('show');
            toggle.classList.toggle('active');
        }

        document.addEventListener('click', function (event) {
            const sidebar = document.getElementById('profileSidebar');
            const toggle = document.querySelector('.mobile-sidebar-toggle');

            if (window.innerWidth <= 991 &&
                !sidebar.contains(event.target) &&
                !toggle.contains(event.target) &&
                sidebar.classList.contains('show')) {
                sidebar.classList.remove('show');
                toggle.classList.remove('active');
            }
        });

        window.addEventListener('resize', function () {
            const sidebar = document.getElementById('profileSidebar');
            const toggle = document.querySelector('.mobile-sidebar-toggle');

            if (window.innerWidth > 991) {
                sidebar.classList.remove('show');
                toggle.classList.remove('active');
            }
        });
        
        function togglePassword(id, icon) {
            const input = document.getElementById(id);
            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("fi-rs-eye");
                icon.classList.add("fi-rs-eye-crossed");
            } else {
                input.type = "password";
                icon.classList.remove("fi-rs-eye-crossed");
                icon.classList.add("fi-rs-eye");
            }
        }

        const form = document.querySelector('.password-form');
        const submitButton = document.getElementById('updateButton');
        const buttonText = document.getElementById('buttonText');
        const currentInput = document.getElementById('currentPassword');
        const newInput = document.getElementById('newPassword');
        const confirmInput = document.getElementById('confirmPassword');

        const currentError = document.getElementById('currentPasswordError');
        const newError = document.getElementById('newPasswordError');
        const confirmError = document.getElementById('confirmPasswordError');

        const originalButtonText = buttonText.textContent;

        function showLoading() {
            submitButton.disabled = true;
            buttonText.innerHTML = '<div class="spinner"></div>Updating...';
        }

        function hideLoading() {
            submitButton.disabled = false;
            buttonText.textContent = originalButtonText;
        }

        function validateForm() {
            [currentError, newError, confirmError].forEach(span => span.textContent = '');

            let valid = true;

            if (!currentInput.value.trim()) {
                currentError.textContent = 'Please enter your current password.';
                valid = false;
            }

            const pwd = newInput.value;
            const pwdRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[\W_]).{8,}$/;
            if (!pwdRegex.test(pwd)) {
                newError.textContent = 'Must be 8+ chars, with uppercase, lowercase, number & special char.';
                valid = false;
            } else if (pwd === currentInput.value) {
                newError.textContent = 'New password must be different from current.';
                valid = false;
            }

            if (confirmInput.value !== pwd) {
                confirmError.textContent = 'Passwords do not match.';
                valid = false;
            }

            return valid;
        }

        form.addEventListener('submit', async function (e) {
            e.preventDefault();

            if (!validateForm()) {
                return;
            }

            showLoading();

            try {
                const formData = {
                    currentPassword: currentInput.value,
                    newPassword: newInput.value,
                    confirmPassword: confirmInput.value
                };

                const response = await fetch('/profile/security', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });

                const data = await response.json();

                hideLoading();

                if (response.ok && data.success) {
                    await Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: 'Password changed successfully!',
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#4CAF50',
                        timer: 3000,
                        timerProgressBar: true
                    });

                    form.reset();
                } else {
                    if (data.errors) {
                        if (data.errors.currentPassword) {
                            currentError.textContent = data.errors.currentPassword;
                        }
                        if (data.errors.newPassword) {
                            newError.textContent = data.errors.newPassword;
                        }
                        if (data.errors.confirmPassword) {
                            confirmError.textContent = data.errors.confirmPassword;
                        }
                        if (data.errors.general) {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: data.errors.general,
                                confirmButtonColor: '#e74c3c'
                            });
                        }
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'An error occurred while updating your password. Please try again.',
                            confirmButtonColor: '#e74c3c'
                        });
                    }
                }
            } catch (error) {
                hideLoading();
                console.error('Error:', error);

                Swal.fire({
                    icon: 'error',
                    title: 'Network Error',
                    text: 'Unable to connect to server. Please check your connection and try again.',
                    confirmButtonColor: '#e74c3c'
                });
            }
        });

    </script>


