                                        >
                                            <i class="fi-rs-heart"></i>
                                        </a>
                                    </div>
                                   
                                    <% if (p.offer && p.offer.hasOffer) { %>
                                        <div class="product-badges product-badges-position product-badges-mrg">
                                            <span class="<%= p.offer.discountPercentage > 50 ? 'hot' : p.offer.discountPercentage > 0 ? 'sale' : 'best' %>">
                                                <% if (p.offer.discountPercentage > 50) { %>
                                                    Hot
                                                <% } else if (p.offer.discountPercentage > 0) { %>
                                                    Sale
                                                <% } else { %>
                                                    Best Sell
                                                <% } %>
                                            </span>
                                        </div>
                                    <% } %>
                                </div>
                                <div class="product-content-wrap">
                                    <h2><a href="/shop/product/<%= p._id %>">
                                            <%= p.productName %>
                                        </a></h2>
                                    <div class="product-category-link m-2">
