                            <% if (product.offer && product.offer.hasOffer) { %>
                                <ins><span class="text-brand">‚Çπ<%= product.offer.finalPrice.toFixed(2) %></span></ins>
                                <ins>
                                    <span class="old-price font-md ml-15">‚Çπ<%= product.offer.originalPrice.toFixed(2) %></span>
                                </ins>
