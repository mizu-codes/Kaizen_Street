                                    <%= product.offer.discountPercentage %>% Off
                                    <% if (product.offer.offerType === 'category') { %>
                                        (Category Offer)
                                    <% } else { %>
                                        (Product Offer)
                                    <% } %>
                                </span>
                            <% } else { %>
                                <ins><span class="text-brand">‚Çπ<%= product.regularPrice.toFixed(2) %></span></ins>
                                <% if (product.discountPrice && product.discountPrice < product.regularPrice) { %>
                                    <ins>
                                        <span class="old-price font-md ml-15">‚Çπ<%= product.regularPrice.toFixed(2) %></span>
                                    </ins>
                                <% } %>
                            <% } %>
