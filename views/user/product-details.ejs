                                        <a href="/shop?category=<%= p.categoryName %>" class="text-brand fw-bold">
                                            <%= p.categoryName %>
                                        </a>
                                    </div>
                                   
                                    <div class="product-price">
                                        <% if (p.offer && p.offer.hasOffer) { %>
                                            <span>‚Çπ<%= p.offer.finalPrice %></span>
                                            <span class="old-price">‚Çπ<%= p.offer.originalPrice %></span>
                                        <% } else { %>
