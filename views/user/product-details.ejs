    <script>
        $(document).ready(function () {
            $('.product-image-slider').slick({
                slidesToShow: 1,
                slidesToScroll: 1,
                arrows: false,
                fade: true,
                asNavFor: '.slider-nav-thumbnails'
            });
            $('.slider-nav-thumbnails').slick({
                slidesToShow: 4,
                slidesToScroll: 1,
                asNavFor: '.product-image-slider',
                dots: false,
                focusOnSelect: true
            });
        });

        $(function () {
            let productStock = {};
            try {
                productStock = JSON.parse(`<%- JSON.stringify(product.stock || {}) %>`);

            } catch (error) {
                console.error('JSON parse failed:', error);
            }

            let selectedSize = null;

            const $sizeLinks = $('#sizeSelector a');
            const $avail = $('#availabilityText');
            const $submitBtn = $('#addToCartForm button[type=submit]');

            $submitBtn.prop('disabled', true);

            $sizeLinks.on('click', function (e) {
                e.preventDefault();
                selectedSize = $(this).data('size');
                $('#selectedSize').val(selectedSize);

                $('#sizeSelector li').removeClass('active');
                $(this).parent().addClass('active');

                const qty = productStock[selectedSize] || 0;
                if (qty > 0) {
                    $avail.text(`Only ${qty} left in stock`)
                        .removeClass('text-danger text-warning')
                        .addClass('text-success');
                    $submitBtn.prop('disabled', false).text('Add to cart');
                } else {
                    $avail.text('Out of stock')
                        .removeClass('text-success text-warning')
                        .addClass('text-danger');
                    $submitBtn.prop('disabled', true).text('Add to cart');
                }
            });

            $('#addToCartForm').on('submit', async function (e) {
                e.preventDefault();

                if ((productStock[selectedSize] || 0) < 1) {
                    return Swal.fire({
                        icon: 'error',
                        title: 'Out of Stock!',
                        text: 'This size is currently out of stock.',
                        customClass: {
                            popup: 'swal-responsive'
                        }
                    });
                }

                $submitBtn.prop('disabled', true)
                    .html('<span class="spinner-border spinner-border-sm" role="status"></span> Adding...');

                const productId = "<%= product._id %>";

                try {
                    const res = await fetch(`/cart/add/${productId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Accept': 'application/json'
                        },
                        credentials: 'include',
                        body: JSON.stringify({ size: selectedSize })
                    });

                    const data = await res.json();

                    if (data.redirect) {
                        await Swal.fire({
                            icon: 'info',
                            title: 'Login Required',
                            text: data.message || 'Please login to add items to cart.',
                            showConfirmButton: true,
                            confirmButtonText: 'Go to Login',
                            customClass: {
                                popup: 'swal-responsive'
                            }
                        });
                        window.location.href = data.redirect;
                        return;
                    }

                    if (!res.ok) throw new Error(data.message || `HTTP ${res.status}`);

                    await Swal.fire({
                        icon: 'success',
                        title: 'Added to cart!',
                        text: data.message || 'Product added successfully.',
                        showConfirmButton: false,
                        timer: 1500,
                        customClass: {
                            popup: 'swal-responsive'
                        }
                    });

                    $submitBtn.prop('disabled', false).text('Add to cart');

                    document.dispatchEvent(new CustomEvent('cart:updated', {
                        detail: { count: data.cartCount }
                    }));

                } catch (error) {
                    console.error('Add to cart error:', error);
                    await Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: error.message || 'Could not add to cart. Please try again.',
                        customClass: {
                            popup: 'swal-responsive'
                        }
                    });
                    $submitBtn.prop('disabled', false).text('Add to cart');
                }
            })
        });

        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.add-to-wishlist-btn').forEach(btn => {
                btn.addEventListener('click', async function (e) {
                    e.preventDefault();

                    const productId = this.dataset.productId;

                    try {
                        const res = await fetch(`/wishlist/add/${productId}`, {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({})
                        });
                        const data = await res.json();

                        if (res.ok) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Added to Wishlist!',
                                showConfirmButton: false,
                                timer: 1200,
                                customClass: { popup: 'swal-responsive' }
                            });

                            document.dispatchEvent(new CustomEvent('wishlist:updated', {
                                detail: { count: data.itemCount }
                            }));

                            btn.classList.add('added');
                            btn.setAttribute('aria-disabled', 'true');
                        } else {
                            Swal.fire('Oops!', data.message, 'error');
                        }

                    } catch (err) {
                        console.error(err);
                        Swal.fire('Error', 'Server error', 'error');
                    }
                });
            });

            document.addEventListener('wishlist:updated', (e) => {
                const el = document.getElementById('wishlistItemCount');
                if (el && e.detail && typeof e.detail.count === 'number') {
                    el.textContent = e.detail.count;
                }
            });
        });
    </script>

