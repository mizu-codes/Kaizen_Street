<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes">
    <title>Verify OTP</title>
    <link rel="icon" type="image/svg+xml" href="/imgs/theme/kaizenicon.svg">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body,
        html {
            width: 100%;
            height: 100%;
            font-family: 'Outfit', sans-serif;
            background: linear-gradient(135deg, #fdfbfb 0%, #ebedee 100%);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            padding: 40px 30px;
            max-width: 400px;
            width: 100%;
            text-align: center;
        }

        .card h3 {
            margin-bottom: 15px;
            margin-top: 15px;
            font-weight: 600;
            color: #333;
            font-size: 1rem;
        }

        .logo-signup-img {
            width: 150px;
            height: auto;
        }

        .logo-signup-img img {
            width: 100%;
            height: auto;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: #555;
        }

        .form-group input {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 16px;
            transition: border-color 0.2s;
        }

        .form-group input:focus {
            outline: none;
            border-color: #eb212199;
        }

        .form-group .invalid-feedback {
            color: #d9534f;
            font-size: 14px;
            margin-top: 5px;
            display: none;
        }

        .form-group input.is-invalid+.invalid-feedback {
            display: block;
        }

        .btn {
            display: block;
            width: 50%;
            margin-left: 80px;
            padding: 12px 0;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.2s, transform 0.1s;
        }

        .btn-primary {
            font-size: 15px;
            font-weight: 700;
            padding: 8px 16px;
            color: #ffffff;
            border: none;
            background: linear-gradient(135deg, #ff1744 0%, #f50057 50%, #c51162 100%);
            border-radius: 14px;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            cursor: pointer;
            position: relative;
            overflow: hidden;
            box-shadow:
                0 6px 20px rgba(245, 0, 87, 0.35),
                inset 0 1px 0 rgba(255, 255, 255, 0.15);
        }

        .btn-primary::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.25), transparent);
            transition: left 0.5s ease;
        }

        .btn-primary:hover::before {
            left: 100%;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #f50057 0%, #c51162 50%, #ad1457 100%) !important;
            transform: translateY(-3px) scale(1.02);
            box-shadow:
                0 6px 15px rgba(228, 2, 81, 0.644),
                0 3px 8px rgba(228, 2, 81, 0.644),
                inset 0 1px 0 rgba(255, 255, 255, 0.1);
        }

        .btn-secondary {
            background: #f2f2f2;
            color: #555;
            margin-top: 15px;
        }

        .btn-secondary:hover {
            background: #e0e0e0;
        }

        .otp-timer {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 70px;
            height: 70px;
            border-radius: 50%;
            background-color: #f5f5f5;
            border: 2px solid #ddd;
            font-weight: 700;
            font-size: 18px;
            margin: 15px auto;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            transition: background 0.3s ease, color 0.3s ease;
        }

        #otp-text-forgotpassword {
            font-size: 15px;
        }

        #timerValue.expired {
            color: #c51162;
            font-size: 16px;
            font-weight: 700;
        }

        .text-muted {
            color: #888;
            font-size: 14px;
            margin-top: 25px;
        }

        .email-message {
            font-size: 1rem;
            color: #555;
            margin-bottom: 20px;
        }

        .email-message strong {
            color: #333;
        }

        .text-muted a {
            color: red;
            text-decoration: none;
        }

        .text-muted a:hover {
            text-decoration: underline;
        }

        @media (max-width: 480px) {
            .card {
                padding: 30px 20px;
            }
        }
          .swal2-popup.swal-responsive {
            color: #333 !important;
            border: 2px solid rgba(0, 0, 0, 0.1) !important;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15) !important;
            backdrop-filter: blur(10px) !important;
        }

        .swal2-title {
            color: #e74c3c !important;
            font-weight: 600 !important;
            text-shadow: none !important;
        }

        .swal2-content {
            color: #666 !important;
        }

        .swal2-confirm {
            background: #3BB77E !important;
            border: none !important;
            border-radius: 8px !important;
            padding: 12px 30px !important;
            font-weight: 600 !important;
            color: white !important;
            box-shadow: 0 4px 15px rgba(59, 183, 126, 0.3) !important;
            transition: all 0.3s ease !important;
        }

        .swal2-confirm:hover {
            background: #2a9d5f !important;
            transform: translateY(-1px) !important;
            box-shadow: 0 6px 20px rgba(59, 183, 126, 0.4) !important;
        }

        .swal2-icon.swal2-error {
            border-color: #e74c3c !important;
            color: #e74c3c !important;
        }

        .swal2-icon.swal2-error .swal2-x-mark {
            color: #e74c3c !important;
        }

        .swal-responsive {
            width: 90% !important;
            max-width: 320px !important;
            padding: 1.2rem !important;
            border-radius: 10px;
            font-size: 0.95rem;
        }
    </style>
</head>

<body>
    <div class="card">
        <div class="logo-signup-img">
            <img src="/imgs/theme/kaizenlogoo.svg" alt="logo">
        </div><br>
        <p class="email-message">We sent the OTP to <strong>
                <%= email %>
            </strong></p>
        <div class="form-group">
            <label id='otp-text-forgotpassword' for="otp">Enter OTP:</label>
            <input type="text" id="otp" name="otp" maxlength="6" pattern="\d{6}" placeholder="6-digit code" />
        </div>
        <button id="verifyBtn" class="btn btn-primary" disabled>Verify OTP</button>

        <div class="otp-section">
            <div id="otpTimer" class="otp-timer">
                <span id="timerValue">60</span>
            </div>
            <button id="resendBtn" class="btn btn-secondary" disabled>Resend OTP</button>
        </div>

        <div class="text-muted">
            Remembered your password? <a href="/login">Login now</a>
        </div>
    </div>

    <script>
        const otpInput = document.getElementById('otp');
        const verifyBtn = document.getElementById('verifyBtn');
        const resendBtn = document.getElementById('resendBtn');
        const timerEl = document.getElementById('timerValue');
        let timer = 60, timerInterval;

        otpInput.addEventListener('input', () => {
            verifyBtn.disabled = otpInput.value.trim().length !== 6;
        });

        function startTimer() {
            clearInterval(timerInterval);
            timer = 60;
            timerEl.textContent = timer;
            timerEl.classList.remove('expired');
            otpInput.disabled = false;
            verifyBtn.disabled = true;
            resendBtn.disabled = true;

            timerInterval = setInterval(() => {
                timerEl.textContent = --timer;
                if (timer <= 0) {
                    clearInterval(timerInterval);
                    timerEl.textContent = 'Exp';
                    timerEl.classList.add('expired');
                    otpInput.disabled = true;
                    verifyBtn.disabled = true;
                    resendBtn.disabled = false;
                }
            }, 1000);
        }

        startTimer();

        resendBtn.addEventListener('click', async () => {
            resendBtn.disabled = true;
            try {
                const res = await fetch('/forgot-password/resend', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email: '<%= email %>' })
                });
                const data = await res.json();
                if (!res.ok || !data.success) throw new Error(data.message || 'Resend failed');
                Swal.fire({ icon: 'success', title: 'OTP Resent!', text: 'Please check your email.', timer: 1500, showConfirmButton: false, customClass: { popup: 'swal-responsive' } });
                startTimer();
            } catch (err) {
                Swal.fire({ icon: 'error', title: 'Error', text: err.message, customClass: { popup: 'swal-responsive' } });
                resendBtn.disabled = false;
            }
        });

        verifyBtn.addEventListener('click', async () => {
            try {
                const res = await fetch('/forgot-password/otp', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email: '<%= email %>', otp: otpInput.value.trim() })
                });
                const data = await res.json();
                if (!res.ok || !data.success) throw new Error(data.message || 'Invalid OTP');
                Swal.fire({ icon: 'success', title: 'Verified!', timer: 1200, showConfirmButton: false, customClass: { popup: 'swal-responsive' } }).then(() => {
                    window.location.href = data.redirectUrl || `/reset-password?email=${encodeURIComponent('<%= email %>')}`;
                });
            } catch (err) {
                Swal.fire({
                    title: 'Invalid OTP',
                    text: err.message,
                    icon: 'error',
                    customClass: {
                        popup: 'swal-responsive'
                    }
                });
            }
        });
    </script>
</body>

</html>