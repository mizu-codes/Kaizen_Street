<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes">
    <title>Admin Login</title>
    <link rel="icon" type="image/svg+xml" href="/imgs/theme/kaizenicon.svg">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Poppins', sans-serif;
      height: 100vh;
      background: #ffffff;
      display: flex;
      justify-content: center;
      align-items: center;
      color: #343434;
      padding: 20px;
    }

    .container {
      width: 100%;
      max-width: 400px;
    }

    .logo-section {
      text-align: left;
      margin-bottom: 2rem;
    }

    .logo-section img {
      max-height: 50px;
      width: auto;
    }

    .neumorphic-card {
      background: #ffffff;
      padding: 2.5rem;
      border-radius: 20px;
      box-shadow:
        20px 20px 40px rgba(0, 0, 0, 0.12),
        20px 20px 40px rgba(0, 0, 0, 0.05),
        0 0 0 1px rgba(0, 0, 0, 0.08),
        0 5px 15px rgba(0, 0, 0, 0.05);
      transition: all 0.3s ease;
       box-shadow:
        25px 25px 50px rgba(0, 0, 0, 0.1),
        25px 25px 50px rgba(255, 255, 255, 2),
        0 0 0 1px rgba(0, 0, 0, 0.15);
    }

    .neumorphic-card:hover {
      box-shadow:
        25px 25px 50px rgba(0, 0, 0, 0.1),
        25px 25px 50px rgba(255, 255, 255, 2),
        0 0 0 1px rgba(0, 0, 0, 0.15);
    }

    .card-header {
      text-align: center;
      margin-bottom: 2rem;
    }

    .card-header h1 {
      font-size: 1.1rem;
      font-weight: 600;
      color: #2c3e50;
      text-transform: uppercase;
      letter-spacing: 2px;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
    }

    .card-header i {
      color: black;
    }

    .login-form {
      margin-bottom: 1.5rem;
    }

    .input-group {
      margin-bottom: 1.5rem;
    }

    .input-group label {
      display: block;
      font-size: 0.9rem;
      font-weight: 500;
      color: #555;
      margin-bottom: 0.5rem;
      margin-left: 0.5rem;
    }

    .input-field {
      width: 100%;
      border: none;
      outline: none;
      background: #ffffff;
      padding: 1rem 1.2rem;
      border-radius: 15px;
      font-size: 1rem;
      color: #333;
      font-family: inherit;
      box-shadow:
        inset 8px 8px 16px rgba(0, 0, 0, 0.06),
        inset -8px -8px 16px rgba(255, 255, 255, 1),
        0 0 0 1px rgba(0, 0, 0, 0.08);
      transition: all 0.3s ease;
    }

    .input-field:focus {
      box-shadow:
        inset 10px 10px 20px rgba(0, 0, 0, 0.08),
        inset -10px -10px 20px rgba(255, 255, 255, 1),
        0 0 0 2px rgba(52, 152, 219, 0.3);
    }

    .input-field::placeholder {
      color: #999;
      font-weight: 300;
    }

    .login-button {
      width: 100%;
      border: none;
      outline: none;
      background: #ffffff;
      padding: 1rem;
      border-radius: 15px;
      font-size: 1.1rem;
      font-weight: 600;
      color: #2c3e50;
      font-family: inherit;
      cursor: pointer;
      text-transform: uppercase;
      letter-spacing: 1px;
      box-shadow:
        12px 12px 24px rgba(0, 0, 0, 0.08),
        -12px -12px 24px rgba(255, 255, 255, 1),
        0 0 0 1px rgba(0, 0, 0, 0.05);
      transition: all 0.2s ease;
    }

    .login-button:hover {
      transform: translateY(-2px);
      box-shadow:
        15px 15px 30px rgba(0, 0, 0, 0.1),
        -15px -15px 30px rgba(255, 255, 255, 1),
        0 0 0 1px rgba(0, 0, 0, 0.08);
    }

    .login-button:active {
      transform: translateY(0);
      box-shadow:
        inset 8px 8px 16px rgba(0, 0, 0, 0.06),
        inset -8px -8px 16px rgba(255, 255, 255, 1),
        0 0 0 1px rgba(0, 0, 0, 0.08);
    }

    .alert {
      width: 100%;
      margin-bottom: 1rem;
      text-align: center;
      font-size: 0.9rem;
      font-weight: 500;
    }

    .alert-danger {
      color: #c62828;
    }

    .card-footer {
      text-align: center;
      margin-top: 1.5rem;
    }

    .card-footer p {
      font-size: 0.85rem;
      color: #666;
      margin: 0;
    }

    .card-footer a {
      color: #e74c3c;
      text-decoration: none;
      font-weight: 500;
      transition: color 0.3s ease;
    }

    .card-footer a:hover {
      color: #c0392b;
      text-decoration: underline;
    }

    @media (max-width: 480px) {
      .neumorphic-card {
        padding: 1.5rem;
      }

      .card-header h1 {
        font-size: 1.5rem;
      }

      .input-field,
      .login-button {
        padding: 0.875rem 1rem;
      }
    }

    .login-button:disabled {
      opacity: 0.7;
      cursor: not-allowed;
      transform: none;
    }

    .login-button.loading::after {
      content: '';
      width: 16px;
      height: 16px;
      margin-left: 10px;
      border: 2px solid transparent;
      border-top: 2px solid #2c3e50;
      border-radius: 50%;
      display: inline-block;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      0% {
        transform: rotate(0deg);
      }

      100% {
        transform: rotate(360deg);
      }
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="neumorphic-card">
      <div class="logo-section">
          <img src="/imgs/theme/kaizenlogoo.svg" alt="Kaizen Logo">
      </div>
      <div class="card-header">
        <h1>
          <i class="fa-solid fa-right-to-bracket"></i>
          Admin
        </h1>
      </div>
      <form action="/admin/login" method="POST" class="login-form">
        <div class="input-group">
          <label for="email">Email Address</label>
          <input type="email" name="email" id="email" class="input-field" placeholder="Enter your email address"
            required autocomplete="email">
        </div>

        <div class="input-group">
          <label for="password">Password</label>
          <input type="password" name="password" id="password" class="input-field" placeholder="Enter your password"
            required autocomplete="current-password">
        </div>

        <button type="submit" class="login-button">
          Sign In
        </button>
      </form>
      <% if (typeof message !=='undefined' && message) { %>
        <div class="alert alert-danger">
          <%= message %>
        </div>
        <% } %>
    </div>
  </div>

  <script>
    document.querySelector('.login-form').addEventListener('submit', function () {
      const button = document.querySelector('.login-button');
      button.classList.add('loading');
      button.disabled = true;
      button.textContent = 'Signing In...';
    });

    const emailInput = document.getElementById('email');
    const passwordInput = document.getElementById('password');

    function validateEmail(email) {
      const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      return re.test(email);
    }

    emailInput.addEventListener('blur', function () {
      if (this.value && !validateEmail(this.value)) {
        this.style.boxShadow = 'inset 8px 8px 16px rgba(231, 76, 60, 0.2), inset -8px -8px 16px rgba(255, 255, 255, 0.8)';
      } else {
        this.style.boxShadow = '';
      }
    });
  </script>
</body>

</html>