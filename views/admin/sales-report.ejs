    <script>
        let currentPage = 1;
        let totalPages = 1;
        let currentOrders = [];
        const ordersPerPage = 10;
     
        $(document).ready(function () {
            $('#dateRange').daterangepicker({
                opens: 'left',
                locale: {
                    format: 'YYYY-MM-DD'
                },
                ranges: {
                    'Today': [moment(), moment()],
                    'Yesterday': [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
                    'Last 7 Days': [moment().subtract(6, 'days'), moment()],
                    'Last 30 Days': [moment().subtract(29, 'days'), moment()],
                    'This Month': [moment().startOf('month'), moment().endOf('month')],
                    'Last Month': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
                }
            });
        });
     
        document.getElementById('reportType').addEventListener('change', function () {
            const customSection = document.getElementById('customDateSection');
            customSection.style.display = this.value === 'custom' ? 'block' : 'none';
        });
      
        document.getElementById('reportForm').addEventListener('submit', function (e) {
            e.preventDefault();
            currentPage = 1;
            generateReport();
        });

        function generateReport() {
            console.log('Generating report...');
     
            document.getElementById('loading').style.display = 'block';
            document.getElementById('statsSection').style.display = 'none';
            document.getElementById('noDataSection').style.display = 'none';
            document.querySelector('.card').style.display = 'none';
            document.getElementById('dateRangeDisplay').style.display = 'none';

            const reportType = document.getElementById('reportType').value;
            let requestData = { reportType };
           
            if (reportType === 'custom') {
                const dateRange = $('#dateRange').data('daterangepicker');
                if (dateRange) {
                    requestData.startDate = dateRange.startDate.format('YYYY-MM-DD');
                    requestData.endDate = dateRange.endDate.format('YYYY-MM-DD');
                } else {
                    alert('Please select a date range for custom reports.');
                    document.getElementById('loading').style.display = 'none';
                    return;
                }
            }

            console.log('Request data:', requestData);
            
            fetch('/admin/sales-report/generate', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(requestData)
            })
                .then(response => {
                    console.log('Response status:', response.status);
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    console.log('Received data:', data);
                    document.getElementById('loading').style.display = 'none';

                    if (data.success) {
                        let dateRangeText = '';
                        switch (reportType) {
                            case 'daily':
                                dateRangeText = `Today: ${data.dateRange.formatted.start}`;
                                break;
                            case 'weekly':
                                dateRangeText = `This Week: ${data.dateRange.formatted.start} - ${data.dateRange.formatted.end}`;
                                break;
                            case 'monthly':
                                dateRangeText = `This Month: ${data.dateRange.formatted.start} - ${data.dateRange.formatted.end}`;
                                break;
                            case 'yearly':
                                dateRangeText = `This Year: ${data.dateRange.formatted.start} - ${data.dateRange.formatted.end}`;
                                break;
                            case 'custom':
                                dateRangeText = `Custom: ${data.dateRange.formatted.start} - ${data.dateRange.formatted.end}`;
                                break;
                        }

                        document.getElementById('dateRangeText').textContent = `Report Period: ${dateRangeText}`;
                        document.getElementById('dateRangeDisplay').style.display = 'block';
                        document.getElementById('statsSection').style.display = 'grid';
                      
                        updateStatistics(data.data.statistics);
                        
                        currentOrders = data.data.orders || [];
                        setupPagination();
                        displayOrdersPage(currentPage);
                    } else {
                        console.error('Error in response:', data.message);
                        Swal.fire('Error', 'Error generating report: ' + (data.message || 'Unknown error'), 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    document.getElementById('loading').style.display = 'none';
                    Swal.fire('Error', 'Error generating report. Please try again. Error: ' + error.message, 'error');
                });
        }

        function updateStatistics(stats) {
            document.getElementById('totalOrders').textContent = stats.totalOrders || 0;
            document.getElementById('totalRevenue').textContent = `₹${(stats.totalRevenue || 0).toLocaleString()}`;
            document.getElementById('totalDiscounts').textContent = `₹${(stats.totalDiscounts || 0).toLocaleString()}`;
            document.getElementById('netSales').textContent = `₹${(stats.netSales || 0).toLocaleString()}`;
        }

        function setupPagination() {
            totalPages = Math.ceil(currentOrders.length / ordersPerPage);

            if (currentOrders.length === 0) {
                document.querySelector('.card').style.display = 'none';
                document.getElementById('noDataSection').style.display = 'block';
                return;
            }

            document.querySelector('.card').style.display = 'block';
            document.getElementById('noDataSection').style.display = 'none';
            
            if (totalPages > 1) {
                document.getElementById('paginationSection').style.display = 'block';
                renderPagination();
            } else {
                document.getElementById('paginationSection').style.display = 'none';
            }
        }

        function displayOrdersPage(page) {
            const tbody = document.getElementById('ordersTableBody');
            tbody.innerHTML = '';

            const startIndex = (page - 1) * ordersPerPage;
            const endIndex = startIndex + ordersPerPage;
            const pageOrders = currentOrders.slice(startIndex, endIndex);

            pageOrders.forEach((order, index) => {
                const slNo = startIndex + index + 1;
                const statusClass = `status-${order.status.toLowerCase().replace(/\s+/g, '-')}`;
                
                let amountDisplay;
                if (order.discount > 0) {
                    amountDisplay = `
            <div class="amount-with-discount">
              <div class="original-amount">₹${order.originalAmount.toLocaleString()}</div>
              <div class="paid-amount">₹${order.finalAmount.toLocaleString()}</div>
              <small class="discount-info">(-₹${order.discount.toLocaleString()})</small>
            </div>
          `;
                } else {
                    amountDisplay = `₹${order.finalAmount.toLocaleString()}`;
                }

                const row = `
          <tr>
            <td>${slNo}</td>
            <td><strong>#${order.orderId}</strong></td>
            <td>${order.customer.name}</td>
            <td title="${order.products}">${order.products.length > 30 ? order.products.substring(0, 30) + '...' : order.products}</td>
            <td>${moment(order.date).format('DD/MM/YYYY')}</td>
            <td>${order.itemCount}</td>
            <td>${amountDisplay}</td>
            <td><span class="status-badge ${statusClass}">${order.status}</span></td>
          </tr>
        `;
                tbody.innerHTML += row;
            });

            console.log(`Displayed ${pageOrders.length} orders on page ${page}`);
        }

        function renderPagination() {
            const paginationList = document.getElementById('paginationList');
            paginationList.innerHTML = '';

            const prevClass = currentPage <= 1 ? 'disabled' : '';
            paginationList.innerHTML += `<li class="page-item ${prevClass}">
          <a class="page-link" href="#" onclick="changePage(${currentPage - 1})">
            <i class="material-icons" style="font-size:16px;">Prev</i>
          </a>
        </li>`;
            let startPage = Math.max(1, currentPage - 2);
            let endPage = Math.min(totalPages, currentPage + 2);

            if (startPage > 1) {
                paginationList.innerHTML += `<li class="page-item"><a class="page-link" href="#" onclick="changePage(1)">1</a></li>`;
                if (startPage > 2) {
                    paginationList.innerHTML += `<li class="page-item disabled"><span class="page-link">...</span></li>`;
                }
            }

            for (let i = startPage; i <= endPage; i++) {
                const activeClass = i === currentPage ? 'active' : '';
                paginationList.innerHTML += `
          <li class="page-item ${activeClass}">
            <a class="page-link" href="#" onclick="changePage(${i})">${i}</a>
          </li>
        `;
            }

            if (endPage < totalPages) {
                if (endPage < totalPages - 1) {
                    paginationList.innerHTML += `<li class="page-item disabled"><span class="page-link">...</span></li>`;
                }
                paginationList.innerHTML += `<li class="page-item"><a class="page-link" href="#" onclick="changePage(${totalPages})">${totalPages}</a></li>`;
            }
        
            const nextClass = currentPage >= totalPages ? 'disabled' : '';
            paginationList.innerHTML += `
        <li class="page-item ${nextClass}">
          <a class="page-link" href="#" onclick="changePage(${currentPage + 1})">
            <i class="material-icons" style="font-size:16px;">Next</i>
          </a>
        </li>
      `;
        }

        function changePage(page) {
            if (page < 1 || page > totalPages || page === currentPage) return;

            currentPage = page;
            displayOrdersPage(currentPage);
            renderPagination();
          
            document.getElementById('ordersTable').scrollIntoView({ behavior: 'smooth' });
        }

        function downloadReport(format) {
            const reportType = document.getElementById('reportType').value;
            let params = new URLSearchParams();
            params.append('reportType', reportType);
            params.append('format', format);

            if (reportType === 'custom') {
                const dateRange = $('#dateRange').data('daterangepicker');
                if (dateRange) {
                    params.append('startDate', dateRange.startDate.format('YYYY-MM-DD'));
                    params.append('endDate', dateRange.endDate.format('YYYY-MM-DD'));
                }
            }
       
            document.getElementById('loading').style.display = 'block';
           
            window.location.href = `/admin/sales-report/download?${params.toString()}`;
           
            setTimeout(() => {
                document.getElementById('loading').style.display = 'none';
            }, 2000);
        }
        
        window.addEventListener('load', function () {
            generateReport();
        });
    </script>

