       <section class="content-main">
    <div class="content-header d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="content-title card-title">Sales Report</h2>
            <p class="mb-0 text-muted">Sales Analytics & Reports</p>
        </div>

        <div class="card filter-section-card" style="padding: 15px; min-width: 400px;">
            <form id="reportForm" action="/admin/sales-report" method="GET" class="d-flex align-items-end gap-3">
                <div style="min-width: 100px;">
                    <label class="form-label fw-semibold" style="font-size: 12px; margin-bottom: 5px;">Report Type</label>
                    <select class="form-select form-select-sm" id="reportType" name="reportType" style="min-width: 100px; height: 38px;">
                        <option value="daily" <%= typeof reportType !== 'undefined' && reportType === 'daily' ? 'selected' : '' %>>Daily</option>
                        <option value="weekly" <%= typeof reportType !== 'undefined' && reportType === 'weekly' ? 'selected' : '' %>>Weekly</option>
                        <option value="monthly" <%= typeof reportType === 'undefined' || reportType === 'monthly' ? 'selected' : '' %>>Monthly</option>
                        <option value="yearly" <%= typeof reportType !== 'undefined' && reportType === 'yearly' ? 'selected' : '' %>>Yearly</option>
                        <option value="custom" <%= typeof reportType !== 'undefined' && reportType === 'custom' ? 'selected' : '' %>>Custom</option>
                    </select>
                </div>

               <div id="dateRangeContainer" <% if (typeof reportType !== 'undefined' && reportType === 'custom') { %>style="display: block;"<% } else { %> style="display: none;"<% } %>>
                    <label class="form-label fw-semibold" style="font-size: 12px; margin-bottom: 5px;">Date Range</label>
                    <div class="d-flex gap-2">
                        <input type="date" class="form-control form-control-sm" id="startDate" name="startDate" 
                               value="<%= typeof startDate !== 'undefined' ? startDate : '' %>" 
                               placeholder="dd-mm-yyyy" style="min-width: 140px; height: 38px;">
                        <input type="date" class="form-control form-control-sm" id="endDate" name="endDate" 
                               value="<%= typeof endDate !== 'undefined' ? endDate : '' %>" 
                               placeholder="dd-mm-yyyy" style="min-width: 140px; height: 38px;">
                    </div>
                </div>

                <div style="margin-top: auto;">
                    <button type="submit" class="btn btn-sm btn-custom btn-primary-custom" style="height: 38px; padding: 0 20px;">
                        <i class="material-icons md-search" style="font-size: 18px;"></i>
                    </button>
                </div>

                <div style="margin-top: auto;">
                    <button type="button" class="btn btn-sm btn-custom btn-success-custom" 
                            onclick="downloadReport('pdf')" style="height: 38px; padding: 0 20px;">
                        PDF
                    </button>
                </div>

                <div style="margin-top: auto;">
                    <button type="button" class="btn btn-sm btn-custom btn-info-custom" 
                            onclick="downloadReport('excel')" style="height: 38px; padding: 0 20px;">
                        Excel
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <% if (typeof reportData !== 'undefined' && reportData && reportData.statistics) { %>
        <div class="date-range-display" style="display: block;">
            <i class="material-icons md-date_range" style="margin-right: 10px;"></i>
            <span id="dateRangeText">
                Report Period: 
                <% if (dateRange.reportType === 'daily') { %>
                    Today: <%= dateRange.start %>
                <% } else if (dateRange.reportType === 'weekly') { %>
                    This Week: <%= dateRange.start %> - <%= dateRange.end %>
                <% } else if (dateRange.reportType === 'monthly') { %>
                    This Month: <%= dateRange.start %> - <%= dateRange.end %>
                <% } else if (dateRange.reportType === 'yearly') { %>
                    This Year: <%= dateRange.start %> - <%= dateRange.end %>
                <% } else { %>
                    Custom: <%= dateRange.start %> - <%= dateRange.end %>
                <% } %>
            </span>
        </div>

        <div class="stats-grid" id="statsSection" style="display: grid;">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="material-icons md-shopping_cart"></i>
                </div>
                <div class="stat-value" id="totalOrders"><%= reportData.statistics.totalOrders %></div>
                <div class="stat-label">Total Orders</div>
            </div>

            <div class="stat-card revenue">
                <div class="stat-icon">
                    <i class="material-icons md-attach_money"></i>
                </div>
                <div class="stat-value" id="totalRevenue">₹<%= reportData.statistics.totalRevenue.toLocaleString('en-IN') %></div>
                <div class="stat-label">Total Revenue</div>
            </div>

            <div class="stat-card discount">
                <div class="stat-icon">
                    <i class="material-icons md-local_offer"></i>
                </div>
                <div class="stat-value" id="totalDiscounts">₹<%= reportData.statistics.totalDiscounts.toLocaleString('en-IN') %></div>
                <div class="stat-label">Total Discounts</div>
            </div>

            <div class="stat-card net">
                <div class="stat-icon">
                    <i class="material-icons md-trending_up"></i>
                </div>
                <div class="stat-value" id="netSales">₹<%= reportData.statistics.netSales.toLocaleString('en-IN') %></div>
                <div class="stat-label">Net Sales</div>
            </div>
        </div>
    <% } %>
  
<% if (typeof reportData !== 'undefined' && reportData && reportData.orders && reportData.orders.length > 0) { %>
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Order Details</h4>
        </div>
        <div class="card-body">
            <div class="table-wrap">
                <table class="table table-custom align-middle mb-0" id="ordersTable">
                    <thead>
                        <tr>
                            <th>SL No</th>
                            <th>Order ID</th>
                            <th>Customer</th>
                            <th>Products</th>
                            <th>Date</th>
                            <th>No of Products</th>
                            <th>Amount</th>
                            <th>Payment</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="ordersTableBody">
                        <% reportData.orders.forEach(function(order, index) { %>
                            <% var slNo=((currentPage - 1) * 10) + index + 1; var statusClass='status-' +
                                order.status.toLowerCase().replace(/\s+/g, '-' ); var productNames=order.products; if
                                (productNames.length> 20) {
                                productNames = productNames.substring(0, 20) + '...';
                                }
                                %>
                                <tr>
                                    <td>
                                        <%= slNo %>
                                    </td>
                                    <td><strong>#<%= order.orderId %></strong></td>
                                    <td>
                                        <%= order.customer.name %>
                                    </td>
                                    <td title="<%= order.products.join(', ') %>">
                                        <% const shortNames=order.products.slice(0, 2).join(', '); 
                                        const remaining = order.products.length - 2; %>
                                        <%= shortNames %><%= remaining > 0 ? ' +' + remaining + ' more' : '' %>
                                    </td>
                                    <td>
                                        <%= moment(order.date).format('DD/MM/YYYY') %>
                                    </td>
                                    <td>
                                        <%= order.itemCount %>
                                    </td>
                                    <td>
                                        <% if (order.discount> 0) { %>
                                            <div class="amount-with-discount">
                                                <div class="original-amount">₹<%= order.originalAmount.toLocaleString('en-IN') %>
                                                </div>
                                                <div class="paid-amount">₹<%= order.finalAmount.toLocaleString('en-IN') %>
                                                </div>
                                                <small class="discount-info">(-₹<%= order.discount.toLocaleString('en-IN') %>
                                                        )</small>
                                            </div>
                                            <% } else { %>
                                                ₹<%= order.finalAmount.toLocaleString('en-IN') %>
                                                    <% } %>
                                    </td>
                                    <td>
                                        <%= order.paymentMethod ? order.paymentMethod : 'N/A' %>
                                    </td>
                                    <td><span class="status-badge <%= statusClass %>">
                                            <%= order.status %>
                                        </span></td>
                                </tr>
                                <% }); %>
                    </tbody>
                </table>
            </div>
            <% if (totalPages> 1) { %>
                <nav aria-label="Page navigation" id="paginationSection">
                    <ul class="pagination justify-content-center mt-4" id="paginationList">
                        <li class="page-item <%= currentPage <= 1 ? 'disabled' : '' %>">
                            <a class="page-link"
                                href="?reportType=<%= typeof reportType !== 'undefined' ? reportType : 'monthly' %>&page=<%= currentPage - 1 %><%= typeof startDate !== 'undefined' && startDate ? '&startDate=' + startDate : '' %><%= typeof endDate !== 'undefined' && endDate ? '&endDate=' + endDate : '' %>">
                                <i class="material-icons" style="font-size:16px;"></i> Prev
                            </a>
                        </li>
            
                        <% const startPage=Math.max(1, currentPage - 2); const endPage=Math.min(totalPages, currentPage + 2); %>
            
                            <% if (startPage> 1) { %>
                                <li class="page-item">
                                    <a class="page-link"
                                        href="?reportType=<%= typeof reportType !== 'undefined' ? reportType : 'monthly' %>&page=1<%= typeof startDate !== 'undefined' && startDate ? '&startDate=' + startDate : '' %><%= typeof endDate !== 'undefined' && endDate ? '&endDate=' + endDate : '' %>">1</a>
                                </li>
                                <% if (startPage> 2) { %>
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                    <% } %>
                                        <% } %>
            
                                            <% for (let i=startPage; i <=endPage; i++) { %>
                                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                    <a class="page-link"
                                                        href="?reportType=<%= typeof reportType !== 'undefined' ? reportType : 'monthly' %>&page=<%= i %><%= typeof startDate !== 'undefined' && startDate ? '&startDate=' + startDate : '' %><%= typeof endDate !== 'undefined' && endDate ? '&endDate=' + endDate : '' %>">
                                                        <%= i %>
                                                    </a>
                                                </li>
                                                <% } %>
            
                                                    <% if (endPage < totalPages) { %>
                                                        <% if (endPage < totalPages - 1) { %>
                                                            <li class="page-item disabled">
                                                                <span class="page-link">...</span>
                                                            </li>
                                                            <% } %>
                                                                <li class="page-item">
                                                                    <a class="page-link"
                                                                        href="?reportType=<%= typeof reportType !== 'undefined' ? reportType : 'monthly' %>&page=<%= totalPages %><%= typeof startDate !== 'undefined' && startDate ? '&startDate=' + startDate : '' %><%= typeof endDate !== 'undefined' && endDate ? '&endDate=' + endDate : '' %>">
                                                                        <%= totalPages %>
                                                                    </a>
                                                                </li>
                                                                <% } %>
            
                                                                    <li
                                                                        class="page-item <%= currentPage >= totalPages ? 'disabled' : '' %>">
                                                                        <a class="page-link"
                                                                            href="?reportType=<%= typeof reportType !== 'undefined' ? reportType : 'monthly' %>&page=<%= currentPage + 1 %><%= typeof startDate !== 'undefined' && startDate ? '&startDate=' + startDate : '' %><%= typeof endDate !== 'undefined' && endDate ? '&endDate=' + endDate : '' %>">
                                                                            Next <i class="material-icons"
                                                                                style="font-size:16px;"></i>
                                                                        </a>
                                                                    </li>
                    </ul>
                </nav>
                <% } %>
                    </div>
                    </div>
                    <% } else if (typeof reportData !=='undefined' && reportData) { %>
                        <div class="no-data" id="noDataSection" style="display: block;">
                            <i class="material-icons md-assessment"></i>
                            <h4>No Sales Data Found</h4>
                            <p>No orders were found for the selected period. Try adjusting your filters.</p>
                        </div>
                        <% } %>

                    </section>

        <footer class="main-footer font-xs text-center py-3">
            <div>&copy;
                <script>
                    document.write(new Date().getFullYear())
                </script> Kaizen Street. All rights reserved.
            </div>
        </footer>
    </main>

    <script src="/assets2/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/assets2/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/assets2/js/vendors/select2.min.js"></script>
    <script src="/assets2/js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/daterangepicker/3.1.0/daterangepicker.min.js"></script>
    
    <script>
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const sidebar = document.getElementById('offcanvas_aside');
        const overlay = document.getElementById('screenOverlay');

        if (mobileMenuBtn) {
            mobileMenuBtn.addEventListener('click', function (e) {
                e.preventDefault();
                sidebar.classList.toggle('show');
                overlay.classList.toggle('show');
            });
        }

        if (overlay) {
            overlay.addEventListener('click', function () {
                sidebar.classList.remove('show');
                overlay.classList.remove('show');
            });
        }

        document.querySelectorAll('.menu-link').forEach(link => {
            link.addEventListener('click', function () {
                sidebar.classList.remove('show');
                overlay.classList.remove('show');
            });
        });

        document.getElementById('reportType').addEventListener('change', function () {
            const dateRangeContainer = document.getElementById('dateRangeContainer');
            dateRangeContainer.style.display = this.value === 'custom' ? 'block' : 'none';
        });

        function isDateInFuture(dateString) {
            const selectedDate = new Date(dateString);
            selectedDate.setHours(23, 59, 59, 999);
            const today = new Date();
            today.setHours(23, 59, 59, 999);
            return selectedDate > today;
        }

        function downloadReport(format) {
            const reportType = document.getElementById('reportType').value;
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;

            if (reportType === 'custom') {
                if (!startDate || !endDate) {
                    Swal.fire('Missing Dates', 'Select both dates', 'warning');
                    return;
                }
                if (isDateInFuture(startDate) || isDateInFuture(endDate)) {
                    Swal.fire('Invalid Date', 'Dates cannot be in the future', 'error');
                    return;
                }
                if (new Date(startDate) > new Date(endDate)) {
                    Swal.fire('Invalid Range', 'Start date cannot be after end date', 'error');
                    return;
                }
            }

            let params = new URLSearchParams();
            params.append('reportType', reportType);
            params.append('format', format);
            if (reportType === 'custom') {
                params.append('startDate', startDate);
                params.append('endDate', endDate);
            }
            window.location.href = `/admin/sales-report/download?${params.toString()}`;
        }

