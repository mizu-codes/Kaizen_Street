    <link href="https://cdnjs.cloudflare.com/ajax/libs/daterangepicker/3.1.0/daterangepicker.css" rel="stylesheet">
    <style>
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 15px;
            margin-bottom: 25px;
        }

        .stat-card {
            background: white;
            padding: 20px 15px;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
            text-align: center;
            position: relative;
            overflow: hidden;
            transition: transform 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, #6c63ff, #8f94fb);
        }

        .stat-card.revenue::before {
            background: linear-gradient(90deg, #28a745, #20c997);
        }

        .stat-card.discount::before {
            background: linear-gradient(90deg, #dc3545, #fd7e14);
        }

        .stat-card.net::before {
            background: linear-gradient(90deg, #ffc107, #fd7e14);
        }

        .stat-icon {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            background: rgba(108, 99, 255, 0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 10px;
            color: #6c63ff;
            font-size: 18px;
        }

        .stat-card.revenue .stat-icon {
            background: rgba(40, 167, 69, 0.1);
            color: #28a745;
        }

        .stat-card.discount .stat-icon {
            background: rgba(220, 53, 69, 0.1);
            color: #dc3545;
        }

        .stat-card.net .stat-icon {
            background: rgba(255, 193, 7, 0.1);
            color: #ffc107;
        }

        .stat-value {
            font-size: 20px;
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 3px;
        }

        .stat-label {
            color: #6c757d;
            font-size: 12px;
            font-weight: 500;
        }

        .filter-section-card {
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
            border-radius: 10px;
        }

        .date-range-display {
            background: linear-gradient(135deg, #6c63ff, #8f94fb);
            color: white;
            padding: 10px;
            border-radius: 10px;
            text-align: center;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .btn-custom {
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: 500;
            border: none;
            transition: all 0.3s ease;
        }

        .btn-primary-custom {
            background: linear-gradient(135deg, #6c63ff, #8f94fb);
            color: white;
        }

        .btn-success-custom {
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
        }

        .btn-info-custom {
            background: linear-gradient(135deg, #17a2b8, #20c997);
            color: white;
        }

        .btn-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .loading {
            display: none;
            text-align: center;
            padding: 40px;
        }

        .no-data {
            text-align: center;
            padding: 60px 20px;
            color: #6c757d;
        }

        .no-data i {
            font-size: 64px;
            margin-bottom: 20px;
            color: #adb5bd;
        }

        .discount-amount {
            color: #dc3545;
            font-weight: 600;
        }

        .final-amount {
            color: #28a745;
            font-weight: 600;
        }

        .order-id {
            font-weight: 600;
            color: #6c63ff;
        }

        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 500;
            text-transform: capitalize;
        }

        .status-placed {
            background: #fff3cd;
            color: #856404;
        }

        .status-processing {
            background: #d1ecf1;
            color: #0c5460;
        }

        .status-shipped {
            background: #e2e3e5;
            color: #383d41;
        }

        .status-out-for-delivery {
            background: #ffeaa7;
            color: #6c5ce7;
        }

        .status-delivered {
            background: #d4edda;
            color: #155724;
        }

        .status-cancelled {
            background: #f8d7da;
            color: #721c24;
        }

        .table-custom th {
            background: linear-gradient(90deg, #6c63ff, #8f94fb);
            color: #fff;
            border: none;
            padding: 10px 8px;
            font-weight: 600;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            text-align: center;
        }

        .table-custom tbody td {
            padding: 8px 6px;
            vertical-align: middle;
            border-bottom: 1px solid #f1f1f1;
            font-size: 13px;
            text-align: center;
        }

        .table-custom tbody tr:hover {
            background-color: #f8f9ff;
        }

        .amount-with-discount {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 2px;
        }

        .original-amount {
            text-decoration: line-through;
            color: #999;
            font-size: 0.75em;
        }

        .paid-amount {
            color: #28a745;
            font-weight: 600;
            font-size: 0.85em;
        }

        .discount-info {
            color: #28a745;
            font-weight: 500;
            font-size: 0.65em;
        }

        .pagination .page-link {
            color: #6c63ff;
            border-radius: 8px;
            border: 1px solid #6c63ff;
            margin: 0 4px;
            transition: 0.3s ease;
            padding: 6px 12px;
            font-size: 14px;
        }

        .pagination .page-link:hover {
            background-color: #6c63ff;
            color: white;
        }

        .pagination .page-item.active .page-link {
            background-color: #6c63ff;
            border-color: #6c63ff;
            color: white;
        }

        .pagination .page-item.disabled .page-link {
            color: #aaa;
            border-color: #ddd;
            background-color: #f9f9f9;
        }

        @media (max-width: 768px) {
            .stats-grid {
                grid-template-columns: 1fr;
            }

            .filter-section .row {
                gap: 10px;
            }
        }
    </style>
</head>

